---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppFloat from '../components/WhatsAppFloat.astro';
import CookieConsent from '../components/CookieConsent.astro';
import Analytics from '../components/Analytics.astro';
import EventTracking from '../components/EventTracking.astro';
import { getTranslations, getAlternateUrl, type Locale } from '../i18n/utils';

interface Props {
  title: string;
  description: string;
  currentPage?: string;
  schema?: object | object[];
}

const { title, description, currentPage = '', schema } = Astro.props;
const locale = (Astro.currentLocale ?? 'en') as Locale;
const t = getTranslations(locale);

const siteUrl = 'https://route95mobilecardetailing.com';
const enUrl = getAlternateUrl(Astro.url, 'en');
const esUrl = getAlternateUrl(Astro.url, 'es');

// Shared address and area served for schemas
const businessAddress = {
  "@type": "PostalAddress" as const,
  "streetAddress": "540 NW 4th Ave, Apt 412",
  "addressLocality": "Fort Lauderdale",
  "addressRegion": "FL",
  "postalCode": "33311",
  "addressCountry": "US"
};

const areaServed = [
  {
    "@type": "City" as const,
    "name": "Fort Lauderdale",
    "sameAs": "https://en.wikipedia.org/wiki/Fort_Lauderdale,_Florida"
  },
  {
    "@type": "City" as const,
    "name": "Dania Beach",
    "sameAs": "https://en.wikipedia.org/wiki/Dania_Beach,_Florida"
  },
  {
    "@type": "City" as const,
    "name": "Hollywood",
    "sameAs": "https://en.wikipedia.org/wiki/Hollywood,_Florida"
  },
  {
    "@type": "City" as const,
    "name": "Pompano Beach",
    "sameAs": "https://en.wikipedia.org/wiki/Pompano_Beach,_Florida"
  }
];

// AutomotiveBusiness Schema (included on all pages)
const businessSchema = {
  "@context": "https://schema.org",
  "@type": "AutomotiveBusiness",
  "@id": "https://route95mobilecardetailing.com/#business",
  "name": "Route95 Mobile Car Detailing LLC",
  "description": "Professional mobile car detailing in Fort Lauderdale. We come to you with premium products from Chemical Guys, Koch-Chemie & 3D. Serving Fort Lauderdale, Dania Beach, Hollywood & Pompano Beach.",
  "image": "https://route95mobilecardetailing.com/logo-transparent.png",
  "telephone": "+1-754-215-2272",
  "email": "contact@route95mobilecardetailing.com",
  "address": businessAddress,
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 26.1224,
    "longitude": -80.1373
  },
  "url": "https://route95mobilecardetailing.com",
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
      "opens": "08:00",
      "closes": "20:00"
    }
  ],
  "priceRange": "$$",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+1-754-215-2272",
    "email": "contact@route95mobilecardetailing.com",
    "contactType": "customer service",
    "availableLanguage": [
      { "@type": "Language", "name": "English", "alternateName": "en" },
      { "@type": "Language", "name": "Spanish", "alternateName": "es" }
    ]
  },
  "founder": {
    "@type": "Person",
    "name": "Gustavo Moya"
  },
  "paymentAccepted": "Cash, Credit Card",
  "currenciesAccepted": "USD",
  "areaServed": areaServed,
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Mobile Car Detailing Services",
    "itemListElement": [
      {
        "@type": "OfferCatalog",
        "name": "Car Wash Services",
        "url": "https://route95mobilecardetailing.com/car-wash-fort-lauderdale/"
      },
      {
        "@type": "OfferCatalog",
        "name": "Upholstery Cleaning Services",
        "url": "https://route95mobilecardetailing.com/upholstery-cleaning-fort-lauderdale/"
      },
      {
        "@type": "OfferCatalog",
        "name": "Car Detailing Packages",
        "url": "https://route95mobilecardetailing.com/car-detailing-services-fort-lauderdale/"
      },
      {
        "@type": "OfferCatalog",
        "name": "Interior Car Detailing Services",
        "url": "https://route95mobilecardetailing.com/interior-car-detailing-fort-lauderdale/"
      }
    ]
  },
  "sameAs": []
};

// BreadcrumbList Schema (included on all pages)
const pathname = Astro.url.pathname;
const pathSegments = pathname.split('/').filter(Boolean);

// Build breadcrumb items from URL path
const breadcrumbItems: { name: string; url: string }[] = [
  { name: locale === 'es' ? 'Inicio' : 'Home', url: `${siteUrl}${locale === 'es' ? '/es/' : '/'}` }
];

// Skip the locale prefix segment for Spanish pages
const startIdx = (locale === 'es' && pathSegments[0] === 'es') ? 1 : 0;
let currentPath = locale === 'es' ? '/es' : '';

for (let i = startIdx; i < pathSegments.length; i++) {
  const segment = pathSegments[i];
  currentPath += `/${segment}`;
  const name = segment
    .replace(/-/g, ' ')
    .replace(/\b\w/g, (c: string) => c.toUpperCase());
  breadcrumbItems.push({ name, url: `${siteUrl}${currentPath}/` });
}

const breadcrumbSchema = breadcrumbItems.length > 1 ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url
  }))
} : null;

// Organization Schema (included on all pages)
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": "https://route95mobilecardetailing.com/#organization",
  "name": "Route95 Mobile Car Detailing LLC",
  "url": "https://route95mobilecardetailing.com",
  "logo": "https://route95mobilecardetailing.com/logo-transparent.png",
  "image": "https://route95mobilecardetailing.com/logo-transparent.png",
  "description": "Professional mobile car detailing service in Broward County, Florida. We bring premium auto detailing directly to your location in Fort Lauderdale, Dania Beach, Hollywood, and Pompano Beach.",
  "telephone": "+1-754-215-2272",
  "email": "contact@route95mobilecardetailing.com",
  "address": businessAddress,
  "areaServed": areaServed,
  "sameAs": []
};
---

<!DOCTYPE html>
<html lang={locale}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="robots" content="index, follow">

  <!-- Google Fonts: preconnect + non-blocking load -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&family=Open+Sans:wght@400;600&display=swap">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&family=Open+Sans:wght@400;600&display=swap" media="print" onload="this.media='all'">
  <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&family=Open+Sans:wght@400;600&display=swap"></noscript>

  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:locale" content={locale === 'es' ? 'es_US' : 'en_US'}>
  <meta property="og:locale:alternate" content={locale === 'es' ? 'en_US' : 'es_US'}>
  <meta property="og:site_name" content="Route95 Mobile Car Detailing">
  <meta property="og:image" content={`${siteUrl}/logo-transparent.png`}>
  <meta property="og:image:width" content="512">
  <meta property="og:image:height" content="512">
  <meta property="og:url" content={Astro.url.href}>

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`${siteUrl}/logo-transparent.png`}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/logo-transparent.png">

  <!-- Canonical -->
  <link rel="canonical" href={Astro.url.href}>

  <!-- hreflang for SEO -->
  <link rel="alternate" hreflang="en" href={`${siteUrl}${enUrl}`} />
  <link rel="alternate" hreflang="es" href={`${siteUrl}${esUrl}`} />
  <link rel="alternate" hreflang="x-default" href={`${siteUrl}${enUrl}`} />

  <title>{title}</title>

  <!-- AutomotiveBusiness Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(businessSchema)} />

  <!-- Organization Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />

  <!-- BreadcrumbList Schema -->
  {breadcrumbSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  )}

  <!-- Additional Schema(s) if provided -->
  {schema && (
    Array.isArray(schema)
      ? schema.map(s => (
          <script type="application/ld+json" set:html={JSON.stringify(s)} />
        ))
      : <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}
</head>
<body class="min-h-screen flex flex-col">
  <Header currentPage={currentPage} locale={locale} />

  <main class="flex-grow">
    <slot />
  </main>

  <Footer locale={locale} />
  <WhatsAppFloat locale={locale} />
  <CookieConsent locale={locale} />
  <Analytics measurementId="G-RCQX2SW02D" />
  <EventTracking />
</body>
</html>
