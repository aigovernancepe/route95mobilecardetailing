---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppFloat from '../components/WhatsAppFloat.astro';
import CookieConsent from '../components/CookieConsent.astro';
import Analytics from '../components/Analytics.astro';
import { getTranslations, getAlternateUrl, type Locale } from '../i18n/utils';

interface Props {
  title: string;
  description: string;
  currentPage?: string;
  schema?: object;
}

const { title, description, currentPage = '', schema } = Astro.props;
const locale = (Astro.currentLocale ?? 'en') as Locale;
const t = getTranslations(locale);

const siteUrl = 'https://route95mobilecardetailing.com';
const enUrl = getAlternateUrl(Astro.url, 'en');
const esUrl = getAlternateUrl(Astro.url, 'es');

// LocalBusiness Schema (included on all pages)
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": "https://route95mobilecardetailing.com/#business",
  "name": "Route95 Mobile Car Detailing LLC",
  "image": "https://route95mobilecardetailing.com/logo-transparent.png",
  "telephone": "+1-754-215-2272",
  "email": "contact@route95mobilecardetailing.com",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "540 NW 4th Ave, Apt 412",
    "addressLocality": "Fort Lauderdale",
    "addressRegion": "FL",
    "postalCode": "33311",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 26.1224,
    "longitude": -80.1373
  },
  "url": "https://route95mobilecardetailing.com",
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
      "opens": "08:00",
      "closes": "20:00"
    }
  ],
  "priceRange": "$$",
  "availableLanguage": ["en", "es"],
  "areaServed": [
    {
      "@type": "City",
      "name": "Fort Lauderdale",
      "sameAs": "https://en.wikipedia.org/wiki/Fort_Lauderdale,_Florida"
    },
    {
      "@type": "City",
      "name": "Hollywood",
      "sameAs": "https://en.wikipedia.org/wiki/Hollywood,_Florida"
    },
    {
      "@type": "City",
      "name": "Pompano Beach",
      "sameAs": "https://en.wikipedia.org/wiki/Pompano_Beach,_Florida"
    }
  ],
  "sameAs": []
};
---

<!DOCTYPE html>
<html lang={locale}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="robots" content="index, follow">

  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:locale" content={locale === 'es' ? 'es_US' : 'en_US'}>
  <meta property="og:locale:alternate" content={locale === 'es' ? 'en_US' : 'es_US'}>
  <meta property="og:site_name" content="Route95 Mobile Car Detailing">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <!-- Canonical -->
  <link rel="canonical" href={Astro.url.href}>

  <!-- hreflang for SEO -->
  <link rel="alternate" hreflang="en" href={`${siteUrl}${enUrl}`} />
  <link rel="alternate" hreflang="es" href={`${siteUrl}${esUrl}`} />
  <link rel="alternate" hreflang="x-default" href={`${siteUrl}${enUrl}`} />

  <title>{title}</title>

  <!-- LocalBusiness Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />

  <!-- Additional Schema if provided -->
  {schema && (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}
</head>
<body class="min-h-screen flex flex-col">
  <Header currentPage={currentPage} locale={locale} />

  <main class="flex-grow">
    <slot />
  </main>

  <Footer locale={locale} />
  <WhatsAppFloat locale={locale} />
  <CookieConsent locale={locale} />
  <Analytics measurementId="G-XXXXXXXXXX" />
</body>
</html>
