---
import ServiceLayout from '../layouts/ServiceLayout.astro';

const base = import.meta.env.BASE_URL;
const title = "Car Detailing Packages Fort Lauderdale | Route95 Mobile Detailing";
const description = "Professional mobile car detailing packages in Fort Lauderdale. Choose from Quick Wash, Fresh Start, or Complete Clean. We come to you! Sedan, SUV & truck pricing. Call 754-215-2272";

const packages = [
  {
    name: "Quick Wash",
    description: "A fast exterior & interior refresh to keep your car looking sharp",
    services: ["Hand Wash", "Tires & Rims", "Window Cleaning", "Interior Wipe Down", "Vacuum"],
    sedan: 50,
    suv: 65,
    truck: 80,
    popular: false
  },
  {
    name: "Fresh Start",
    description: "A step up with tire dressing and full interior wipe down",
    services: ["Hand Wash", "Tires & Rims", "Tire Dressing", "Window Cleaning", "Dashboard", "Center Console", "Vacuum"],
    sedan: 80,
    suv: 95,
    truck: 110,
    popular: false
  },
  {
    name: "Complete Clean",
    description: "Our most thorough package — inside and out, trunk included",
    services: ["Hand Wash", "Tires & Rims", "Tire Dressing", "Fender Wells", "Exterior Plastic Restorer", "Window Cleaning", "Dashboard", "Center Console", "Floor Mats", "Vacuum (incl. Trunk)"],
    sedan: 130,
    suv: 145,
    truck: 160,
    popular: true,
    promo: true,
    promoLabel: "10% OFF — Feb & March 2026",
    promoDiscount: 0.10
  },
  {
    name: "Premium Refresh",
    description: "Deep interior shampoo with steam cleaning — the ultimate detail",
    services: ["Interior Shampoo (Seats, Carpets, Door Panels, Seatbelts)", "Door Jambs", "Steam Cleaning", "+ Everything in Complete Clean"],
    sedan: null,
    suv: null,
    truck: null,
    popular: false,
    comingSoon: true
  }
];

// All services for comparison matrix
const allServices = [
  "Hand Wash",
  "Tires & Rims",
  "Window Cleaning",
  "Interior Wipe Down",
  "Vacuum",
  "Tire Dressing",
  "Dashboard",
  "Center Console",
  "Fender Wells",
  "Exterior Plastic Restorer",
  "Floor Mats",
  "Vacuum (incl. Trunk)",
  "Interior Shampoo",
  "Door Jambs",
  "Steam Cleaning",
];

// Map which services are included in each package
const packageIncludes: Record<string, Set<string>> = {
  "Quick Wash": new Set(["Hand Wash", "Tires & Rims", "Window Cleaning", "Interior Wipe Down", "Vacuum"]),
  "Fresh Start": new Set(["Hand Wash", "Tires & Rims", "Window Cleaning", "Interior Wipe Down", "Vacuum", "Tire Dressing", "Dashboard", "Center Console"]),
  "Complete Clean": new Set(["Hand Wash", "Tires & Rims", "Window Cleaning", "Interior Wipe Down", "Vacuum", "Tire Dressing", "Dashboard", "Center Console", "Fender Wells", "Exterior Plastic Restorer", "Floor Mats", "Vacuum (incl. Trunk)"]),
  "Premium Refresh": new Set(["Hand Wash", "Tires & Rims", "Window Cleaning", "Interior Wipe Down", "Vacuum", "Tire Dressing", "Dashboard", "Center Console", "Fender Wells", "Exterior Plastic Restorer", "Floor Mats", "Vacuum (incl. Trunk)", "Interior Shampoo", "Door Jambs", "Steam Cleaning"]),
};

const addOns = [
  { name: "Doorjambs", price: 20 },
  { name: "Vacuum Truck", price: 20 },
  { name: "Pet Hair Removal", price: 25 },
  { name: "Floor Mat Cleaning", price: 25 },
  { name: "Exterior Plastic Restorer", price: 20 },
  { name: "Steam Cleaning", price: 50 }
];

const parentCategory = {
  href: `${base}car-detailing-services-fort-lauderdale/`,
  title: "Car Detailing Services"
};
---

<ServiceLayout
  title={title}
  description={description}
  h1="Car Detailing Packages Fort Lauderdale"
  intro="Save money with our bundled detailing packages. Each package combines popular services at a discount—the more you bundle, the more you save. All packages include mobile service at your Fort Lauderdale location."
  currentPage="/packages-fort-lauderdale/"
  parentCategory={parentCategory}
>
  <div class="space-y-12">
    <!-- Pricing Note -->
    <div class="bg-gradient-to-r from-[#0a1e38] to-[#0f2a4a] rounded-xl p-6 text-white">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h2 class="text-xl font-bold mb-2">Mobile Detailing Packages</h2>
          <p class="text-gray-300">Prices vary by vehicle size. We come to your location in Fort Lauderdale, Hollywood & Pompano Beach!</p>
        </div>
        <a href="tel:+17542152272" class="btn-accent inline-flex items-center justify-center gap-2 whitespace-nowrap">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call for Quote
        </a>
      </div>
    </div>

    <!-- Package Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {packages.map(pkg => (
        <div class={`bg-white rounded-xl shadow-lg overflow-hidden border-2 ${pkg.promo ? 'border-green-500 ring-2 ring-green-200' : pkg.popular ? 'border-[#0f2a4a]' : 'border-transparent'} hover:shadow-xl transition-shadow relative`}>
          {pkg.promo && (
            <div class="bg-green-500 text-white text-center py-2 text-sm font-bold tracking-wide">
              {pkg.promoLabel}
            </div>
          )}
          {pkg.popular && !pkg.promo && (
            <div class="absolute top-0 right-0 bg-[#0f2a4a] text-white px-4 py-1 text-sm font-bold rounded-bl-lg">
              Most Popular
            </div>
          )}
          {pkg.comingSoon && (
            <div class="absolute top-0 right-0 bg-[#c0c7cf] text-[#0f2a4a] px-4 py-1 text-sm font-bold rounded-bl-lg">
              Coming Soon
            </div>
          )}

          <div class="p-6">
            <h3 class="text-xl font-bold text-[#0f2a4a] mb-1">{pkg.name}</h3>
            <p class="text-gray-500 text-sm mb-4">{pkg.description}</p>

            <!-- Services included -->
            <div class="mb-4">
              <p class="text-xs text-gray-400 uppercase tracking-wide mb-2">Includes:</p>
              <ul class="space-y-1">
                {pkg.services.map(service => (
                  <li class="flex items-center gap-2 text-sm text-gray-700">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#0f2a4a] flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {service}
                  </li>
                ))}
              </ul>
            </div>

            <!-- Pricing -->
            {!pkg.comingSoon ? (
              <div class="border-t pt-4 mt-4">
                <div class="grid grid-cols-3 gap-2 text-center">
                  <div>
                    <p class="text-xs text-gray-400">Sedan/Hatchback</p>
                    {pkg.promo ? (
                      <div>
                        <p class="text-sm text-gray-400 line-through">${pkg.sedan}</p>
                        <p class="text-2xl font-bold text-green-600">${Math.round(pkg.sedan * (1 - pkg.promoDiscount))}</p>
                      </div>
                    ) : (
                      <p class="text-2xl font-bold text-[#0f2a4a]">${pkg.sedan}</p>
                    )}
                  </div>
                  <div>
                    <p class="text-xs text-gray-400">Crossover/SUV</p>
                    {pkg.promo ? (
                      <div>
                        <p class="text-sm text-gray-400 line-through">${pkg.suv}</p>
                        <p class="text-2xl font-bold text-green-600">${Math.round(pkg.suv * (1 - pkg.promoDiscount))}</p>
                      </div>
                    ) : (
                      <p class="text-2xl font-bold text-[#0f2a4a]">${pkg.suv}</p>
                    )}
                  </div>
                  <div>
                    <p class="text-xs text-gray-400">Truck/Large</p>
                    {pkg.promo ? (
                      <div>
                        <p class="text-sm text-gray-400 line-through">${pkg.truck}</p>
                        <p class="text-2xl font-bold text-green-600">${Math.round(pkg.truck * (1 - pkg.promoDiscount))}</p>
                      </div>
                    ) : (
                      <p class="text-2xl font-bold text-[#0f2a4a]">${pkg.truck}</p>
                    )}
                  </div>
                </div>
              </div>
            ) : (
              <div class="border-t pt-4 mt-4 text-center">
                <p class="text-gray-500 italic">Pricing coming soon — contact us for details</p>
              </div>
            )}
          </div>

          <div class="bg-gray-50 px-6 py-4">
            <a href="tel:+17542152272" class="block w-full text-center bg-[#0f2a4a] text-white py-2 rounded-lg font-semibold hover:bg-[#1a3d6b] transition-colors">
              {pkg.comingSoon ? 'Contact Us' : 'Book This Package'}
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Add-Ons Section -->
    <section>
      <h2 class="text-2xl font-bold text-[#0f2a4a] mb-6">Add-Ons</h2>
      <p class="text-gray-600 mb-6">Enhance any package with these individual services:</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {addOns.map(addon => (
          <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 flex items-center justify-between hover:shadow-md transition-shadow">
            <span class="font-medium text-gray-700">{addon.name}</span>
            <span class="text-lg font-bold text-[#0f2a4a]">${addon.price}</span>
          </div>
        ))}
      </div>
    </section>

    <!-- Package Comparison Matrix -->
    <section>
      <h2 class="text-2xl font-bold text-[#0f2a4a] mb-6">Compare Packages</h2>
      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-xl shadow-lg overflow-hidden">
          <thead>
            <tr class="bg-[#0f2a4a] text-white">
              <th class="px-4 py-4 text-left font-semibold min-w-[180px]">Service</th>
              {packages.map(pkg => (
                <th class="px-3 py-4 text-center font-semibold min-w-[120px]">
                  <span>{pkg.name}</span>
                  {pkg.promo && <span class="block text-xs text-green-300 mt-1">10% OFF</span>}
                  {pkg.comingSoon && <span class="block text-xs text-gray-300 mt-1">Coming Soon</span>}
                </th>
              ))}
            </tr>
          </thead>
          <tbody>
            {allServices.map((service, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'} hover:bg-blue-50/50 transition-colors`}>
                <td class="px-4 py-3 text-sm font-medium text-gray-700">{service}</td>
                {packages.map(pkg => (
                  <td class="px-3 py-3 text-center">
                    {packageIncludes[pkg.name].has(service) ? (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mx-auto text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                      </svg>
                    ) : (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mx-auto text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" />
                      </svg>
                    )}
                  </td>
                ))}
              </tr>
            ))}
            <!-- Pricing rows -->
            <tr class="bg-[#0f2a4a]/5 border-t-2 border-[#0f2a4a]/20">
              <td class="px-4 py-3 text-sm font-bold text-[#0f2a4a]">Sedan / Hatchback</td>
              {packages.map(pkg => (
                <td class="px-3 py-3 text-center font-bold">
                  {pkg.sedan ? (
                    pkg.promo ? (
                      <span>
                        <span class="line-through text-gray-400 text-xs">${pkg.sedan}</span>
                        <span class="text-green-600 block text-lg">${Math.round(pkg.sedan * (1 - pkg.promoDiscount))}</span>
                      </span>
                    ) : (
                      <span class="text-[#0f2a4a] text-lg">${pkg.sedan}</span>
                    )
                  ) : (
                    <span class="text-gray-400">TBD</span>
                  )}
                </td>
              ))}
            </tr>
            <tr class="bg-[#0f2a4a]/5">
              <td class="px-4 py-3 text-sm font-bold text-[#0f2a4a]">Crossover / SUV</td>
              {packages.map(pkg => (
                <td class="px-3 py-3 text-center font-bold">
                  {pkg.suv ? (
                    pkg.promo ? (
                      <span>
                        <span class="line-through text-gray-400 text-xs">${pkg.suv}</span>
                        <span class="text-green-600 block text-lg">${Math.round(pkg.suv * (1 - pkg.promoDiscount))}</span>
                      </span>
                    ) : (
                      <span class="text-[#0f2a4a] text-lg">${pkg.suv}</span>
                    )
                  ) : (
                    <span class="text-gray-400">TBD</span>
                  )}
                </td>
              ))}
            </tr>
            <tr class="bg-[#0f2a4a]/5 border-b-0">
              <td class="px-4 py-3 text-sm font-bold text-[#0f2a4a]">Truck / Large</td>
              {packages.map(pkg => (
                <td class="px-3 py-3 text-center font-bold">
                  {pkg.truck ? (
                    pkg.promo ? (
                      <span>
                        <span class="line-through text-gray-400 text-xs">${pkg.truck}</span>
                        <span class="text-green-600 block text-lg">${Math.round(pkg.truck * (1 - pkg.promoDiscount))}</span>
                      </span>
                    ) : (
                      <span class="text-[#0f2a4a] text-lg">${pkg.truck}</span>
                    )
                  ) : (
                    <span class="text-gray-400">TBD</span>
                  )}
                </td>
              ))}
            </tr>
            <!-- Book buttons row -->
            <tr class="bg-white">
              <td class="px-4 py-4"></td>
              {packages.map(pkg => (
                <td class="px-3 py-4 text-center">
                  <a href="tel:+17542152272" class={`inline-block px-4 py-2 rounded-lg text-sm font-semibold transition-colors ${pkg.promo ? 'bg-green-500 text-white hover:bg-green-600' : 'bg-[#0f2a4a] text-white hover:bg-[#1a3d6b]'}`}>
                    {pkg.comingSoon ? 'Contact Us' : 'Book Now'}
                  </a>
                </td>
              ))}
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <!-- Custom Package CTA -->
    <section class="bg-gray-50 rounded-xl p-8 text-center">
      <h2 class="text-2xl font-bold text-[#0f2a4a] mb-4">Need Something Custom?</h2>
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
        Every vehicle is different. Call us to discuss your specific needs and we'll put together a personalized quote.
        Add-ons can be combined with any package.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:+17542152272" class="btn-accent inline-flex items-center justify-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call 754-215-2272
        </a>
        <a href={`${base}contact/`} class="bg-white border-2 border-[#0f2a4a] text-[#0f2a4a] px-6 py-3 rounded-md font-semibold hover:bg-gray-50 transition-colors">
          Request Quote Online
        </a>
      </div>
    </section>

    <!-- FAQ Section -->
    <section>
      <h2 class="text-2xl font-bold text-[#0f2a4a] mb-6">Package FAQs</h2>
      <div class="space-y-4">
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="font-semibold text-[#0f2a4a] mb-2">What's the difference between Sedan, SUV, and Truck pricing?</h3>
          <p class="text-gray-600">Sedans and hatchbacks are the base price. Crossovers, SUVs, and minivans are mid-tier. Trucks, full-size SUVs, and large vehicles are the highest tier due to additional surface area and time required.</p>
        </div>
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="font-semibold text-[#0f2a4a] mb-2">Can I add extra services to a package?</h3>
          <p class="text-gray-600">Absolutely! Any of our add-ons (doorjambs, pet hair removal, steam cleaning, etc.) can be combined with any package. Just let us know when you book.</p>
        </div>
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="font-semibold text-[#0f2a4a] mb-2">Do you come to my location?</h3>
          <p class="text-gray-600">Yes! We're a fully mobile service. We come to your home, office, or any location in Fort Lauderdale, Hollywood, and Pompano Beach. All we need is access to water and your vehicle.</p>
        </div>
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="font-semibold text-[#0f2a4a] mb-2">When will Premium Refresh be available?</h3>
          <p class="text-gray-600">We're finalizing the products for our Premium Refresh package. Contact us for updates or to discuss a custom deep-cleaning solution in the meantime.</p>
        </div>
      </div>
    </section>
  </div>
</ServiceLayout>
