---
import ServiceLayout from '../layouts/ServiceLayout.astro';
import ProcessSteps from '../components/ProcessSteps.astro';

const base = import.meta.env.BASE_URL;
const title = "Pet Hair Removal Fort Lauderdale | Mobile Dog & Cat Hair Extraction | Route95";
const description = "Professional pet hair removal in Fort Lauderdale. Mobile service — we come to your location! Removes embedded dog and cat hair from seats, carpets & crevices. Same-day appointments. Call 754-215-2272";

const parentCategory = {
  href: `${base}upholstery-cleaning-fort-lauderdale/`,
  title: "Upholstery Cleaning Services"
};

const siteUrl = "https://route95mobilecardetailing.com";
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "@id": `${siteUrl}/pet-hair-removal-fort-lauderdale/#service`,
  "name": "Pet Hair Removal Fort Lauderdale",
  "description": description,
  "url": `${siteUrl}/pet-hair-removal-fort-lauderdale/`,
  "serviceType": "Pet Hair Removal",
  "category": "Mobile Car Detailing",
  "provider": { "@id": `${siteUrl}/#business` },
  "areaServed": [
    { "@type": "City", "name": "Fort Lauderdale", "sameAs": "https://en.wikipedia.org/wiki/Fort_Lauderdale,_Florida" },
    { "@type": "City", "name": "Dania Beach" },
    { "@type": "City", "name": "Hollywood" },
    { "@type": "City", "name": "Pompano Beach" },
    { "@type": "City", "name": "Coral Springs" },
    { "@type": "City", "name": "Wilton Manors" }
  ],
  "offers": {
    "@type": "AggregateOffer",
    "priceCurrency": "USD",
    "lowPrice": 50,
    "highPrice": 100,
    "availability": "https://schema.org/InStock"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Pet Hair Removal Services",
    "itemListElement": [
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Dog Hair Removal from Car Seats" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Cat Hair Removal from Car Interior" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Pet Dander Removal and Allergen Reduction" } }
    ]
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How do you remove pet hair from car seats?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We use a multi-step process: specialized rubber brushes create static to lift embedded hair from fabric fibers, detailing tools extract hair from seat seams and crevices, commercial-grade vacuums remove loosened hair, and lint rollers catch remaining fine hairs. This process removes pet hair that regular vacuuming cannot reach."
      }
    },
    {
      "@type": "Question",
      "name": "How Much Does Pet Hair Removal Cost in Fort Lauderdale?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Pet hair removal in Fort Lauderdale costs $50 to $100 depending on hair volume and how deeply it's embedded. Light pet hair from occasional trips costs around $50, while daily pet transport with heavy buildup is closer to $100."
      }
    },
    {
      "@type": "Question",
      "name": "How Long Does Pet Hair Removal Take?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Pet hair removal takes 30 to 45 minutes for most vehicles, depending on hair volume and how deeply it's embedded. We work methodically through seats, carpets, door panels, and all crevices where hair collects."
      }
    },
    {
      "@type": "Question",
      "name": "Why Is Pet Hair So Hard to Remove from Cars?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Pet hair has a barbed structure that grips fabric fibers. Static electricity makes it cling to surfaces. Regular vacuums don't have the suction or attachments to pull embedded hair free. In Florida's humid climate, pet hair bonds even more tightly to upholstery."
      }
    },
    {
      "@type": "Question",
      "name": "Do you offer mobile pet hair removal near me in Fort Lauderdale?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, Route95 provides mobile pet hair removal throughout Fort Lauderdale and surrounding areas including Dania Beach, Hollywood, Pompano Beach, Coral Springs, and Wilton Manors. We come directly to your home or office with all the specialized equipment needed."
      }
    },
    {
      "@type": "Question",
      "name": "How often should I get professional pet hair removal?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "For pet owners who transport their pets regularly, we recommend professional pet hair removal every 1 to 2 months. This prevents major buildup that is harder and more expensive to address. Occasional pet travelers may only need service every 3 to 4 months."
      }
    },
    {
      "@type": "Question",
      "name": "Can pet hair in my car cause allergies?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, pet hair and dander trapped in your car's upholstery and ventilation system can trigger allergic reactions in sensitive passengers. Professional pet hair removal significantly reduces allergens by extracting embedded hair and dander that regular cleaning misses."
      }
    }
  ]
};

const schemas = [serviceSchema, faqSchema];
---

<ServiceLayout
  title={title}
  description={description}
  h1="Pet Hair Removal Fort Lauderdale"
  intro="Professional pet hair removal extracts embedded dog and cat hair from your car's seats, carpets, and hard-to-reach areas. Mobile service — we come to you anywhere in Fort Lauderdale."
  currentPage="/pet-hair-removal-fort-lauderdale/"
  parentCategory={parentCategory}
  schema={schemas}
>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2 space-y-8">
      <section>
        <p class="text-gray-600 mb-4">
          Pet hair works itself deep into fabric fibers and wedges into crevices where vacuums can't reach. Regular cleaning might get the loose hair on top, but the embedded strands stay behind. Every time you sit down, more hair works its way out—it feels like the hair never ends.
        </p>
        <p class="text-gray-600 mb-4">
          We bring our pet hair removal service directly to your home or office anywhere in Fort Lauderdale. Whether you live near Snyder Park or out by Coral Springs, we come to you with specialized tools designed specifically for pet hair extraction.
        </p>
