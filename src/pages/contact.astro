---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Contact Us | Route95 Mobile Car Detailing Fort Lauderdale";
const description = "Contact Route95 Mobile Car Detailing for professional mobile car detailing in Fort Lauderdale. Call 754-215-2272 or request a free quote online. Same-day service available.";

const services = [
  "Hand Wash",
  "Full Detail",
  "Interior Cleaning",
  "Leather Cleaning & Conditioning",
  "Odor Removal",
  "Pet Hair Removal",
  "Headlight Restoration",
  "Paint Protection",
  "Other"
];
---

<BaseLayout title={title} description={description} currentPage="/contact/">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#1e3a5f] to-[#152a45] text-white py-16">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold mb-4">Contact Us</h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Ready to get your car detailed? Call us now or fill out the form below for a free quote. Same-day service available throughout Fort Lauderdale.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold text-[#1e3a5f] mb-6">Request a Free Quote</h2>
          <form action="https://formspree.io/f/xyzgkqpw" method="POST" class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c9a227] focus:border-transparent outline-none transition-all"
                  placeholder="Your name"
                >
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone *</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c9a227] focus:border-transparent outline-none transition-all"
                  placeholder="(754) 555-0123"
                >
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c9a227] focus:border-transparent outline-none transition-all"
                placeholder="you@example.com"
              >
            </div>

            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-1">Service Interested In</label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c9a227] focus:border-transparent outline-none transition-all bg-white"
              >
                <option value="">Select a service</option>
                {services.map(service => (
                  <option value={service}>{service}</option>
                ))}
              </select>
            </div>

            <div>
              <label for="vehicle" class="block text-sm font-medium text-gray-700 mb-1">Vehicle Make & Model</label>
              <input
                type="text"
                id="vehicle"
                name="vehicle"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c9a227] focus:border-transparent outline-none transition-all"
                placeholder="e.g., Mercedes S-Class, BMW X5"
              >
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c9a227] focus:border-transparent outline-none transition-all resize-none"
                placeholder="Tell us about your vehicle and what services you're interested in..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full btn-accent text-lg py-4"
            >
              Request Free Quote
            </button>

            <p class="text-sm text-gray-500 text-center">
              We typically respond within 1-2 hours during business hours.
            </p>
          </form>
        </div>

        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold text-[#1e3a5f] mb-6">Get In Touch</h2>

          <!-- Quick Contact -->
          <div class="bg-gradient-to-br from-[#1e3a5f] to-[#2d4a6f] rounded-xl p-6 mb-8 text-white">
            <h3 class="text-xl font-bold mb-4">Need Service Today?</h3>
            <p class="text-gray-300 mb-4">
              Call us directly for same-day appointments. We can often be at your location within a few hours.
            </p>
            <a href="tel:+17542152272" class="btn-accent inline-flex items-center gap-2 text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              754-215-2272
            </a>
          </div>

          <!-- Contact Details -->
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#1e3a5f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-[#1e3a5f]">Phone</h4>
                <a href="tel:+17542152272" class="text-gray-600 hover:text-[#c9a227]">754-215-2272</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#1e3a5f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-[#1e3a5f]">Email</h4>
                <a href="mailto:contact@route95mobilecardetailing.com" class="text-gray-600 hover:text-[#c9a227] break-all">
                  contact@route95mobilecardetailing.com
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#1e3a5f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-[#1e3a5f]">Address</h4>
                <p class="text-gray-600">
                  540 NW 4th Ave, Apt 412<br>
                  Fort Lauderdale, FL 33311
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#1e3a5f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-[#1e3a5f]">Hours</h4>
                <p class="text-gray-600">
                  Monday - Saturday: 8AM - 8PM<br>
                  Sunday: Closed
                </p>
              </div>
            </div>
          </div>

          <!-- Service Areas -->
          <div class="mt-8 p-6 bg-gray-50 rounded-xl">
            <h3 class="font-bold text-[#1e3a5f] mb-4">Service Areas</h3>
            <p class="text-gray-600 mb-4">
              We provide mobile car detailing throughout Broward County, including:
            </p>
            <ul class="grid grid-cols-2 gap-2 text-gray-600">
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Fort Lauderdale
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Las Olas
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Nurmi Isles
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Seven Isles
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Hollywood
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Pompano Beach
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-8 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="rounded-xl overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d114964.53925916665!2d-80.20352840258781!3d26.12230389580008!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d9010b2ba2cf47%3A0x71a6f5c2f8a77d5f!2sFort%20Lauderdale%2C%20FL!5e0!3m2!1sen!2sus!4v1706900000000!5m2!1sen!2sus"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Route95 Mobile Car Detailing Service Area - Fort Lauderdale"
        ></iframe>
      </div>
    </div>
  </section>
</BaseLayout>
