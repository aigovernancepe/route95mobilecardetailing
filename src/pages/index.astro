---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
const title = "Mobile Car Detailing Fort Lauderdale | Route95";
const description = "Professional mobile car detailing in Fort Lauderdale. We come to you! Same-day service available. Luxury car specialists serving Las Olas, Nurmi Isles & Broward County. Call 754-215-2272";

const categories = [
  {
    title: "Car Wash",
    description: "Hand wash, clay bar treatment, waxing, wheel cleaning, chrome polishing, water spot removal and more.",
    href: `${base}car-wash-fort-lauderdale/`,
    icon: "car"
  },
  {
    title: "Upholstery Cleaning",
    description: "Seat shampooing, leather cleaning & conditioning, carpet cleaning, steam cleaning, odor removal, pet hair removal.",
    href: `${base}upholstery-cleaning-fort-lauderdale/`,
    icon: "interior"
  },
  {
    title: "Car Detailing Services",
    description: "Full detail packages, luxury car detailing, express detail, headlight restoration, trim restoration, paint protection film.",
    href: `${base}car-detailing-services-fort-lauderdale/`,
    icon: "detail"
  }
];

const usps = [
  { title: "Mobile Convenience", description: "We come to your home, office, or any location", icon: "truck" },
  { title: "Premium Products", description: "We use Chemical Guys professional-grade products", icon: "star" },
  { title: "Luxury Specialists", description: "Trained and experienced with high-end vehicles", icon: "diamond" },
  { title: "Same-Day Service", description: "Appointments often available today", icon: "clock" },
  { title: "Satisfaction Guarantee", description: "You'll love the results or we make it right", icon: "check" }
];

const serviceAreas = [
  "Fort Lauderdale",
  "Las Olas & Las Olas Isles",
  "Nurmi Isles",
  "Seven Isles",
  "Hollywood",
  "Pompano Beach",
  "All of Broward County"
];
---

<BaseLayout title={title} description={description} currentPage="/">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#1e3a5f] to-[#152a45] text-white py-20 lg:py-32">
    <div class="max-w-7xl mx-auto px-4">
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-6">
          Mobile Car Detailing Fort Lauderdale
        </h1>
        <p class="text-xl lg:text-2xl text-gray-300 mb-8">
          Fort Lauderdale's sun, salt air, and humidity can be tough on your car. That's why Route95 Mobile Car Detailing brings professional car care right to your driveway, office, or wherever you are in Broward County.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="tel:+17542152272" class="btn-accent text-center text-lg flex items-center justify-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call 754-215-2272
          </a>
          <a href={`${base}contact/`} class="bg-white text-[#1e3a5f] px-6 py-3 rounded-md font-semibold text-center hover:bg-gray-100 transition-colors">
            Get a Free Quote
          </a>
        </div>
        <p class="mt-6 text-[#c9a227] font-semibold">
          Same-day service available for Fort Lauderdale area
        </p>
      </div>
    </div>
    <!-- Decorative element -->
    <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-white to-transparent"></div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-[#1e3a5f] mb-4">
          Why Fort Lauderdale Car Owners Choose Route95
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Living in South Florida means your car faces daily challenges. The intense sun fades paint and cracks dashboards. Salt air from the Atlantic corrodes chrome and trim. We understand these local conditions because we detail cars here every day.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {usps.map(usp => (
          <div class="bg-gray-50 rounded-xl p-8 text-center hover:shadow-lg transition-shadow duration-300">
            <div class="w-20 h-20 bg-gradient-to-br from-[#1e3a5f] to-[#2d5a8f] rounded-2xl flex items-center justify-center mx-auto mb-5 shadow-lg">
              {usp.icon === 'truck' && (
                <!-- Mobile Van Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                </svg>
              )}
              {usp.icon === 'star' && (
                <!-- Sparkle/Quality Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
                </svg>
              )}
              {usp.icon === 'diamond' && (
                <!-- Crown/Premium Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75l5.25-5.25L12 18l4.5-4.5 5.25 5.25M2.25 18.75V6l5.25 6L12 6l4.5 6 5.25-6v12.75" />
                  <circle cx="12" cy="5" r="1.5" fill="currentColor" />
                  <circle cx="4" cy="5" r="1" fill="currentColor" />
                  <circle cx="20" cy="5" r="1" fill="currentColor" />
                </svg>
              )}
              {usp.icon === 'clock' && (
                <!-- Lightning/Fast Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                </svg>
              )}
              {usp.icon === 'check' && (
                <!-- Shield Check Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-[#1e3a5f] mb-2">{usp.title}</h3>
            <p class="text-gray-600">{usp.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-[#1e3a5f] mb-4">
          Our Mobile Detailing Services
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          From quick washes to complete details, we bring professional car care to your location. We specialize in luxury and high-end vehicles, using Chemical Guys products to deliver showroom results every time.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {categories.map(category => (
          <a href={category.href} class="service-card bg-white rounded-xl shadow-lg overflow-hidden group">
            <div class="h-48 bg-gradient-to-br from-[#1e3a5f] to-[#2d4a6f] flex items-center justify-center">
              {category.icon === 'car' && (
                <!-- Car with water droplets - exterior wash -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.125-.504 1.125-1.125v-3.026a2.999 2.999 0 00-.879-2.121l-2.621-2.621a2.999 2.999 0 00-2.121-.879H5.25A2.25 2.25 0 003 11.25v5.625m10.5-8.625V5.25a.75.75 0 00-.75-.75h-4.5a.75.75 0 00-.75.75v2.625" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 4.5c0 .75-.375 1.5-.375 1.5s-.375-.75-.375-1.5.375-1.5.375-1.5.375.75.375 1.5z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.5 7c0 .5-.25 1-.25 1s-.25-.5-.25-1 .25-1 .25-1 .25.5.25 1z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 6.5c0 .5-.25 1-.25 1s-.25-.5-.25-1 .25-1 .25-1 .25.5.25 1z" />
                </svg>
              )}
              {category.icon === 'interior' && (
                <!-- Car seat - interior/upholstery -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 20h12M6 20v-2a2 2 0 012-2h8a2 2 0 012 2v2M6 20H4M18 20h2" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M7 16V8a1 1 0 011-1h8a1 1 0 011 1v8" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M7 8c-1.5 0-2.5-1-2.5-2.5S5.5 3 7 3" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8c1.5 0 2.5-1 2.5-2.5S18.5 3 17 3" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 10h6M9 13h6" />
                </svg>
              )}
              {category.icon === 'detail' && (
                <!-- Polish/detail sparkle -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
                </svg>
              )}
            </div>
            <div class="p-6">
              <h2 class="text-2xl font-bold text-[#1e3a5f] mb-3 group-hover:text-[#c9a227] transition-colors">
                {category.title}
              </h2>
              <p class="text-gray-600 mb-4">{category.description}</p>
              <span class="inline-flex items-center text-[#1e3a5f] font-semibold group-hover:text-[#c9a227] transition-colors">
                Learn More
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-[#1e3a5f] mb-6">
            What Makes Our Mobile Service Different
          </h2>
          <p class="text-gray-600 mb-4">
            Most car washes rush through dozens of vehicles per hour. They use harsh chemicals and recycled water. The result? Swirl marks, missed spots, and a "clean" that lasts maybe two days.
          </p>
          <p class="text-gray-600 mb-4">
            Route95 takes a different approach. We treat every vehicle like it's our own. Each mobile car detailing appointment gets our full attention. We bring all our own water, power, and premium Chemical Guys products.
          </p>
          <p class="text-gray-600 mb-6">
            Owner Gustavo Moya started Route95 with a simple idea: bring professional detailing to where you are. No more waiting at a shop. No more rearranging your schedule.
          </p>
          <div class="bg-[#f8f9fa] border-l-4 border-[#c9a227] p-4">
            <p class="text-[#1e3a5f] font-semibold">
              Our satisfaction guarantee means you'll love the results or we make it right.
            </p>
          </div>
        </div>
        <div class="bg-gradient-to-br from-[#1e3a5f] to-[#2d4a6f] rounded-xl p-8 text-white">
          <h3 class="text-2xl font-bold mb-6">Service Areas</h3>
          <p class="text-gray-300 mb-6">
            We serve all of Fort Lauderdale and surrounding areas. Same-day appointments available - call us in the morning, and we can often be at your location that afternoon.
          </p>
          <ul class="space-y-3">
            {serviceAreas.map(area => (
              <li class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#c9a227]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>{area}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-[#1e3a5f] to-[#152a45] text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-6">
        Schedule Your Mobile Car Detailing Today
      </h2>
      <p class="text-xl text-gray-300 mb-8">
        Your car deserves better than a drive-through car wash. It deserves the attention and care that only professional mobile detailing provides. We work around your schedule, use premium Chemical Guys products, and guarantee your satisfaction.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:+17542152272" class="btn-accent text-lg flex items-center justify-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call 754-215-2272
        </a>
        <a href={`${base}contact/`} class="bg-white text-[#1e3a5f] px-6 py-3 rounded-md font-semibold hover:bg-gray-100 transition-colors">
          Request a Quote Online
        </a>
      </div>
      <p class="mt-6 text-[#c9a227]">
        Same-day appointments available throughout Fort Lauderdale
      </p>
    </div>
  </section>
</BaseLayout>
