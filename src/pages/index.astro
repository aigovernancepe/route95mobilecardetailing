---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
const title = "Mobile Car Detailing Fort Lauderdale | Route95";

// WhatsApp configuration
const whatsappNumber = "17542152272";
const whatsappMessage = "Hi! I'd like to get a quote for mobile car detailing.";
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
const description = "Professional mobile car detailing in Fort Lauderdale. We come to you! Same-day service available. Serving Fort Lauderdale, Dania Beach, Hollywood & Pompano Beach. Call 754-215-2272";

const categories = [
  {
    title: "Car Wash",
    description: "Hand wash, clay bar treatment, waxing, wheel cleaning, engine bay cleaning, water spot removal and more.",
    href: `${base}car-wash-fort-lauderdale/`,
    icon: "car"
  },
  {
    title: "Upholstery Cleaning",
    description: "Seat shampooing, leather cleaning & conditioning, carpet cleaning, steam cleaning, odor removal, pet hair removal.",
    href: `${base}upholstery-cleaning-fort-lauderdale/`,
    icon: "interior"
  },
  {
    title: "Car Detailing Services",
    description: "Quick Wash, Fresh Start, Complete Clean & Premium Refresh packages. Mobile service at your location.",
    href: `${base}car-detailing-services-fort-lauderdale/`,
    icon: "detail"
  }
];

const usps = [
  { title: "Mobile Convenience", description: "We come to your home, office, or any location", icon: "truck" },
  { title: "Premium Products", description: "We use professional-grade products from Chemical Guys, Koch-Chemie & 3D", icon: "star" },
  { title: "Same-Day Service", description: "Appointments often available today", icon: "clock" },
  { title: "Satisfaction Guarantee", description: "You'll love the results or we make it right", icon: "check" }
];

const serviceAreas = [
  { name: "Fort Lauderdale", href: `${base}` },
  { name: "Dania Beach", href: `${base}mobile-car-detailing-dania-beach/` },
  { name: "Hollywood", href: `${base}mobile-car-detailing-hollywood-fl/` },
  { name: "Pompano Beach", href: `${base}mobile-car-detailing-pompano-beach/` }
];

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Route95 Mobile Car Detailing",
  "url": "https://route95mobilecardetailing.com/",
  "description": "Professional mobile car detailing in Fort Lauderdale. We come to you!",
  "publisher": {
    "@id": "https://route95mobilecardetailing.com/#business"
  },
  "inLanguage": ["en-US", "es-ES"]
};
---

<BaseLayout title={title} description={description} currentPage="/" schema={websiteSchema}>
  <!-- Hero Section -->
  <section class="relative text-white py-20 lg:py-32 overflow-hidden" style="background: linear-gradient(135deg, rgba(12,36,72,0.85), rgba(30,80,160,0.7), rgba(15,50,100,0.8)), url('/route95_hero_background_wide.webp') center/cover no-repeat; background-color: #0c2448;">
    <!-- Water drops overlay -->
    <div class="absolute inset-0 pointer-events-none" style="background: url('/water-drops-overlay.webp') center/cover no-repeat; z-index: 1;"></div>
    <div class="max-w-7xl mx-auto px-4">
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-6">
          Mobile Car Detailing Fort Lauderdale
        </h1>
        <p class="text-xl lg:text-2xl text-gray-200 mb-8">
