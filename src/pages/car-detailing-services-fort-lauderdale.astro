---
import BaseLayout from '../layouts/BaseLayout.astro';
import InstagramFeed from '../components/InstagramFeed.astro';

const base = import.meta.env.BASE_URL;
const title = "Car Detailing Services Fort Lauderdale | Mobile | Route95";
const description = "Mobile car detailing packages in Fort Lauderdale. Quick Wash, Fresh Start, Complete Clean & Premium Refresh. We come to you! Call 754-215-2272.";

const packages = [
  {
    name: "Quick Wash",
    slug: "quick-wash-fort-lauderdale",
    description: "A fast exterior & interior refresh to keep your car looking sharp. Hand wash, tires & rims, window cleaning, interior wipe down, and vacuum.",
    sedan: 50,
    suv: 65,
    truck: 80
  },
  {
    name: "Fresh Start",
    slug: "fresh-start-fort-lauderdale",
    description: "A step up with tire dressing and full interior wipe down. Includes hand wash, tires & rims, tire dressing, window cleaning, dashboard, center console, and vacuum.",
    sedan: 80,
    suv: 95,
    truck: 110
  },
  {
    name: "Complete Clean",
    slug: "complete-clean-fort-lauderdale",
    description: "Our most thorough package — inside and out, trunk included. Hand wash, tires & rims, tire dressing, fender wells, exterior plastic restorer, windows, dashboard, console, floor mats, and full vacuum.",
    sedan: 130,
    suv: 145,
    truck: 160,
    popular: true,
    promo: true,
    promoLabel: "10% OFF — Feb & March 2026"
  },
  {
    name: "Premium Refresh",
    slug: "premium-refresh-fort-lauderdale",
    description: "Deep interior shampoo with steam cleaning — the ultimate detail. Includes interior shampoo (seats, carpets, door panels, seatbelts), door jambs, steam cleaning, plus everything in Complete Clean.",
    comingSoon: true
  }
];
---

<BaseLayout title={title} description={description} currentPage="/car-detailing-services-fort-lauderdale/">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#0a1e38] to-[#0f2a4a] text-white py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4">
      <h1 class="text-4xl lg:text-5xl font-bold mb-6">Car Detailing Services Fort Lauderdale</h1>
      <p class="text-xl text-gray-300 max-w-3xl mb-6">
        <strong>Professional mobile detailing packages that come to your Fort Lauderdale location. Choose the level of care your vehicle needs — from a quick refresh to a complete deep clean.</strong>
      </p>
      <p class="text-lg text-gray-300 max-w-3xl mb-4">
        Every package includes mobile service at your home or office in Fort Lauderdale, Hollywood, and Pompano Beach. We use Chemical Guys premium products and our satisfaction guarantee backs every detail.
      </p>
      <p class="text-lg text-gray-300 max-w-3xl mb-8">
        Same-day appointments often available. Call 754-215-2272.
      </p>
      <a href="tel:+17542152272" class="btn-accent inline-flex items-center justify-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Call 754-215-2272
      </a>
    </div>
  </section>

  <!-- Package Cards -->
  <section class="py-12 lg:py-16">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {packages.map(pkg => (
          <div class={`bg-white rounded-xl shadow-lg overflow-hidden border-2 ${pkg.promo ? 'border-green-500 ring-2 ring-green-200' : pkg.popular ? 'border-[#0f2a4a]' : 'border-transparent'} hover:shadow-xl transition-shadow relative`}>
            {pkg.promo && (
              <div class="bg-green-500 text-white text-center py-2 text-sm font-bold tracking-wide">
                {pkg.promoLabel}
              </div>
            )}
            {pkg.popular && !pkg.promo && (
              <div class="absolute top-0 right-0 bg-[#0f2a4a] text-white px-4 py-1 text-sm font-bold rounded-bl-lg">
                Most Popular
              </div>
            )}
            {pkg.comingSoon && (
              <div class="absolute top-0 right-0 bg-[#c0c7cf] text-[#0f2a4a] px-4 py-1 text-sm font-bold rounded-bl-lg">
                Coming Soon
              </div>
            )}

            <div class="p-6">
              <h2 class="text-2xl font-bold text-[#0f2a4a] mb-2">{pkg.name}</h2>
              <p class="text-gray-600 mb-4">{pkg.description}</p>

              {!pkg.comingSoon ? (
                <div class="border-t pt-4 mt-4">
                  <div class="grid grid-cols-3 gap-2 text-center mb-4">
                    <div>
                      <p class="text-xs text-gray-400">Sedan</p>
                      <p class="text-xl font-bold text-[#0f2a4a]">${pkg.sedan}</p>
                    </div>
                    <div>
                      <p class="text-xs text-gray-400">SUV</p>
                      <p class="text-xl font-bold text-[#0f2a4a]">${pkg.suv}</p>
                    </div>
                    <div>
                      <p class="text-xs text-gray-400">Truck</p>
                      <p class="text-xl font-bold text-[#0f2a4a]">${pkg.truck}</p>
                    </div>
                  </div>
                </div>
              ) : (
                <div class="border-t pt-4 mt-4 text-center">
                  <p class="text-gray-500 italic mb-4">Pricing coming soon — contact us for details</p>
                </div>
              )}

              <a href={`${base}${pkg.slug}/`} class="block w-full text-center bg-[#0f2a4a] text-white py-3 rounded-lg font-semibold hover:bg-[#1a3d6b] transition-colors">
                {pkg.comingSoon ? 'Learn More' : 'View Package Details'}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Instagram Feed Section -->
  <InstagramFeed scriptSrc="https://cdn.trustindex.io/loader-feed.js?d8507166482b128b321694773f5" />

  <!-- Book Your Detail -->
  <section class="py-12 lg:py-16">
    <div class="max-w-4xl mx-auto px-4">
      <div class="border-t pt-12">
        <h2 class="text-2xl font-bold text-[#0f2a4a] mb-4">Book Your Detail</h2>
        <p class="text-gray-600 mb-4">
          Ready for professional detailing at your location? We serve Fort Lauderdale, Hollywood, and Pompano Beach Monday through Saturday, 8 AM to 8 PM. Same-day appointments often available.
        </p>
        <p class="text-gray-600 mb-2">
          <strong>Call or text:</strong> <a href="tel:+17542152272" class="text-[#0f2a4a] hover:text-[#c0c7cf]">754-215-2272</a>
        </p>
        <p class="text-gray-600">
          <strong>Email:</strong> <a href="mailto:contact@route95mobilecardetailing.com" class="text-[#0f2a4a] hover:text-[#c0c7cf]">contact@route95mobilecardetailing.com</a>
        </p>
      </div>
    </div>
  </section>

</BaseLayout>
