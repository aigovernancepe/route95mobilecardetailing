---
import BaseLayout from '../layouts/BaseLayout.astro';
import InstagramFeed from '../components/InstagramFeed.astro';

const base = import.meta.env.BASE_URL;
const title = "Car Detailing Services Fort Lauderdale | Mobile | Route95";
const description = "Mobile car detailing packages in Fort Lauderdale. Quick Wash, Fresh Start, Complete Clean & Premium Refresh. Compare packages, add-ons & pricing. Call 754-215-2272.";

const siteUrl = "https://route95mobilecardetailing.com";
const categorySchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "@id": `${siteUrl}/car-detailing-services-fort-lauderdale/#service`,
  "name": "Mobile Car Detailing Services Fort Lauderdale",
  "description": description,
  "url": `${siteUrl}/car-detailing-services-fort-lauderdale/`,
  "serviceType": "Mobile Car Detailing",
  "provider": { "@id": `${siteUrl}/#business` },
  "areaServed": [
    { "@type": "City", "name": "Fort Lauderdale" },
    { "@type": "City", "name": "Dania Beach" },
    { "@type": "City", "name": "Hollywood" },
    { "@type": "City", "name": "Pompano Beach" }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Car Detailing Packages",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Quick Wash", "url": `${siteUrl}/quick-wash-fort-lauderdale/` },
        "priceSpecification": { "@type": "PriceSpecification", "minPrice": 50, "maxPrice": 80, "priceCurrency": "USD" }
      },
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Fresh Start", "url": `${siteUrl}/fresh-start-fort-lauderdale/` },
        "priceSpecification": { "@type": "PriceSpecification", "minPrice": 80, "maxPrice": 110, "priceCurrency": "USD" }
      },
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Complete Clean", "url": `${siteUrl}/complete-clean-fort-lauderdale/` },
        "priceSpecification": { "@type": "PriceSpecification", "minPrice": 130, "maxPrice": 160, "priceCurrency": "USD" }
      },
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Premium Refresh", "url": `${siteUrl}/premium-refresh-fort-lauderdale/` }
      }
    ]
  }
};

const packages = [
  {
    name: "Quick Wash",
    slug: "quick-wash-fort-lauderdale",
    description: "A fast exterior & interior refresh to keep your car looking sharp. Hand wash, tires & rims, window cleaning, interior wipe down, and vacuum.",
    sedan: 50,
    suv: 65,
    truck: 80
  },
  {
    name: "Fresh Start",
    slug: "fresh-start-fort-lauderdale",
    description: "A step up with tire dressing and full interior wipe down. Includes hand wash, tires & rims, tire dressing, window cleaning, dashboard, center console, and vacuum.",
    sedan: 80,
    suv: 95,
    truck: 110
  },
  {
    name: "Complete Clean",
    slug: "complete-clean-fort-lauderdale",
    description: "Our most thorough package — inside and out, trunk included. Hand wash, tires & rims, tire dressing, fender wells, windows, dashboard, console, floor mats, and full vacuum.",
    sedan: 130,
    suv: 145,
    truck: 160,
    popular: true,
    promo: true,
    promoLabel: "10% OFF — Feb & March 2026",
    promoDiscount: 0.10
  },
  {
    name: "Premium Refresh",
    slug: "premium-refresh-fort-lauderdale",
    description: "Deep interior shampoo with steam cleaning — the ultimate detail. Includes interior shampoo (seats, carpets, door panels, seatbelts), door jambs, steam cleaning, plus everything in Complete Clean.",
    comingSoon: true
  }
];

// All services for comparison matrix
const allServices = [
  "Hand Wash",
  "Tires & Rims",
  "Window Cleaning",
  "Interior Wipe Down",
  "Vacuum",
  "Tire Dressing",
  "Dashboard",
  "Center Console",
  "Fender Wells",
  "Floor Mats",
  "Vacuum (incl. Trunk)",
  "Interior Shampoo",
  "Door Jambs",
  "Steam Cleaning",
];

// Map which services are included in each package
const packageIncludes: Record<string, Set<string>> = {
  "Quick Wash": new Set(["Hand Wash", "Tires & Rims", "Window Cleaning", "Interior Wipe Down", "Vacuum"]),
  "Fresh Start": new Set(["Hand Wash", "Tires & Rims", "Window Cleaning", "Interior Wipe Down", "Vacuum", "Tire Dressing", "Dashboard", "Center Console"]),
  "Complete Clean": new Set(["Hand Wash", "Tires & Rims", "Window Cleaning", "Interior Wipe Down", "Vacuum", "Tire Dressing", "Dashboard", "Center Console", "Fender Wells", "Floor Mats", "Vacuum (incl. Trunk)"]),
  "Premium Refresh": new Set(["Hand Wash", "Tires & Rims", "Window Cleaning", "Interior Wipe Down", "Vacuum", "Tire Dressing", "Dashboard", "Center Console", "Fender Wells", "Floor Mats", "Vacuum (incl. Trunk)", "Interior Shampoo", "Door Jambs", "Steam Cleaning"]),
};

const addOns = [
  { name: "Door Jambs", price: 20 },
  { name: "Vacuum Trunk", price: 20 },
  { name: "Pet Hair Removal", price: 25 },
  { name: "Floor Mat Cleaning", price: 25 },
  { name: "Trim Restoration", price: 30 },
  { name: "Steam Cleaning", price: 50 },
  { name: "Odor Removal", price: 40 },
  { name: "Leather Conditioning", price: 40 },
  { name: "Bug & Tar Removal", price: 30 },
  { name: "Seat Shampooing", price: 75, from: true },
  { name: "Carpet Shampooing", price: 60, from: true },
  { name: "Car Waxing", price: 60, from: true }
];
---

<BaseLayout title={title} description={description} currentPage="/car-detailing-services-fort-lauderdale/" schema={categorySchema}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#0c2448] to-[#1a5ca0] text-white py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4">
      <h1 class="text-4xl lg:text-5xl font-bold mb-6">Car Detailing Services Fort Lauderdale</h1>
      <p class="text-xl text-gray-200 max-w-3xl mb-6">
        <strong>Professional mobile detailing packages that come to your Fort Lauderdale location. Choose the level of care your vehicle needs — from a quick refresh to a complete deep clean.</strong>
      </p>
      <p class="text-lg text-gray-200 max-w-3xl mb-4">
        Every package includes mobile service at your home or office in Fort Lauderdale, Dania Beach, Hollywood, and Pompano Beach. We use premium products from Chemical Guys, Koch-Chemie, and 3D, and our satisfaction guarantee backs every detail.
      </p>
      <p class="text-lg text-gray-200 max-w-3xl mb-8">
        Same-day appointments often available. Call 754-215-2272.
      </p>
      <a href="tel:+17542152272" class="btn-accent inline-flex items-center justify-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Call 754-215-2272
      </a>
    </div>
  </section>

  <!-- Package Cards -->
  <section class="py-12 lg:py-16">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {packages.map(pkg => (
          <div class={`bg-white rounded-xl shadow-lg overflow-hidden border-2 ${pkg.promo ? 'border-green-500 ring-2 ring-green-200' : pkg.popular ? 'border-[#0f2a4a]' : 'border-transparent'} hover:shadow-xl transition-shadow relative`}>
            {pkg.promo && (
              <div class="bg-green-500 text-white text-center py-2 text-sm font-bold tracking-wide">
                {pkg.promoLabel}
              </div>
            )}
            {pkg.popular && !pkg.promo && (
              <div class="absolute top-0 right-0 bg-[#0f2a4a] text-white px-4 py-1 text-sm font-bold rounded-bl-lg">
                Most Popular
              </div>
            )}
            {pkg.comingSoon && (
              <div class="absolute top-0 right-0 bg-[#c0c7cf] text-[#0f2a4a] px-4 py-1 text-sm font-bold rounded-bl-lg">
                Coming Soon
              </div>
            )}

            <div class="p-6">
              <h2 class="text-2xl font-bold text-[#0f2a4a] mb-2">{pkg.name}</h2>
              <p class="text-gray-600 mb-4">{pkg.description}</p>

              {!pkg.comingSoon ? (
                <div class="border-t pt-4 mt-4">
                  <div class="grid grid-cols-3 gap-2 text-center mb-4">
                    <div>
                      <p class="text-xs text-gray-400">Sedan</p>
                      {pkg.promo ? (
                        <div>
                          <p class="text-sm text-gray-400 line-through">${pkg.sedan}</p>
                          <p class="text-xl font-bold text-green-600">${Math.round(pkg.sedan * (1 - pkg.promoDiscount))}</p>
                        </div>
                      ) : (
                        <p class="text-xl font-bold text-[#0f2a4a]">${pkg.sedan}</p>
                      )}
                    </div>
                    <div>
                      <p class="text-xs text-gray-400">SUV</p>
                      {pkg.promo ? (
                        <div>
                          <p class="text-sm text-gray-400 line-through">${pkg.suv}</p>
                          <p class="text-xl font-bold text-green-600">${Math.round(pkg.suv * (1 - pkg.promoDiscount))}</p>
                        </div>
                      ) : (
                        <p class="text-xl font-bold text-[#0f2a4a]">${pkg.suv}</p>
                      )}
                    </div>
                    <div>
                      <p class="text-xs text-gray-400">Truck</p>
                      {pkg.promo ? (
                        <div>
                          <p class="text-sm text-gray-400 line-through">${pkg.truck}</p>
                          <p class="text-xl font-bold text-green-600">${Math.round(pkg.truck * (1 - pkg.promoDiscount))}</p>
                        </div>
                      ) : (
                        <p class="text-xl font-bold text-[#0f2a4a]">${pkg.truck}</p>
                      )}
                    </div>
                  </div>
                </div>
              ) : (
                <div class="border-t pt-4 mt-4 text-center">
                  <p class="text-gray-500 italic mb-4">Pricing coming soon — contact us for details</p>
                </div>
              )}

              <a href={`${base}${pkg.slug}/`} class="block w-full text-center bg-[#0f2a4a] text-white py-3 rounded-lg font-semibold hover:bg-[#1a3d6b] transition-colors">
                {pkg.comingSoon ? 'Learn More' : 'View Package Details'}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Add-Ons Section -->
  <section class="py-12 lg:py-16 bg-gray-50">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-[#0f2a4a] mb-2">Add-Ons*</h2>
      <p class="text-gray-600 mb-6">Enhance any package with these individual services:</p>
      <p class="text-sm text-gray-500 mb-6">*Prices apply only in combination with a package booking.</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {addOns.map(addon => (
          <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 flex items-center justify-between hover:shadow-md transition-shadow">
            <span class="font-medium text-gray-700">{addon.name}</span>
            <span class="text-lg font-bold text-[#0f2a4a]">{addon.from ? `from $${addon.price}` : `$${addon.price}`}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Package Comparison Matrix -->
  <section class="py-12 lg:py-16">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-[#0f2a4a] mb-6">Compare Packages</h2>
      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-xl shadow-lg overflow-hidden">
          <thead>
            <tr class="bg-[#0f2a4a] text-white">
              <th class="px-4 py-4 text-left font-semibold min-w-[180px]">Service</th>
              {packages.map(pkg => (
                <th class="px-3 py-4 text-center font-semibold min-w-[120px]">
                  <span>{pkg.name}</span>
                  {pkg.promo && <span class="block text-xs text-green-300 mt-1">10% OFF</span>}
                  {pkg.comingSoon && <span class="block text-xs text-gray-200 mt-1">Coming Soon</span>}
                </th>
              ))}
            </tr>
          </thead>
          <tbody>
            {allServices.map((service, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'} hover:bg-blue-50/50 transition-colors`}>
                <td class="px-4 py-3 text-sm font-medium text-gray-700">{service}</td>
                {packages.map(pkg => (
                  <td class="px-3 py-3 text-center">
                    {packageIncludes[pkg.name].has(service) ? (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mx-auto text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                      </svg>
                    ) : (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mx-auto text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" />
                      </svg>
                    )}
                  </td>
                ))}
              </tr>
            ))}
            <!-- Pricing rows -->
            <tr class="bg-[#0f2a4a]/5 border-t-2 border-[#0f2a4a]/20">
              <td class="px-4 py-3 text-sm font-bold text-[#0f2a4a]">Sedan / Hatchback</td>
              {packages.map(pkg => (
                <td class="px-3 py-3 text-center font-bold">
                  {pkg.sedan ? (
                    pkg.promo ? (
                      <span>
                        <span class="line-through text-gray-400 text-xs">${pkg.sedan}</span>
                        <span class="text-green-600 block text-lg">${Math.round(pkg.sedan * (1 - pkg.promoDiscount))}</span>
                      </span>
                    ) : (
                      <span class="text-[#0f2a4a] text-lg">${pkg.sedan}</span>
                    )
                  ) : (
                    <span class="text-gray-400">TBD</span>
                  )}
                </td>
              ))}
            </tr>
            <tr class="bg-[#0f2a4a]/5">
              <td class="px-4 py-3 text-sm font-bold text-[#0f2a4a]">Crossover / SUV</td>
              {packages.map(pkg => (
                <td class="px-3 py-3 text-center font-bold">
                  {pkg.suv ? (
                    pkg.promo ? (
                      <span>
                        <span class="line-through text-gray-400 text-xs">${pkg.suv}</span>
                        <span class="text-green-600 block text-lg">${Math.round(pkg.suv * (1 - pkg.promoDiscount))}</span>
                      </span>
                    ) : (
                      <span class="text-[#0f2a4a] text-lg">${pkg.suv}</span>
                    )
                  ) : (
                    <span class="text-gray-400">TBD</span>
                  )}
                </td>
              ))}
            </tr>
            <tr class="bg-[#0f2a4a]/5 border-b-0">
              <td class="px-4 py-3 text-sm font-bold text-[#0f2a4a]">Truck / Large</td>
              {packages.map(pkg => (
                <td class="px-3 py-3 text-center font-bold">
                  {pkg.truck ? (
                    pkg.promo ? (
                      <span>
                        <span class="line-through text-gray-400 text-xs">${pkg.truck}</span>
                        <span class="text-green-600 block text-lg">${Math.round(pkg.truck * (1 - pkg.promoDiscount))}</span>
                      </span>
                    ) : (
                      <span class="text-[#0f2a4a] text-lg">${pkg.truck}</span>
                    )
                  ) : (
                    <span class="text-gray-400">TBD</span>
                  )}
                </td>
              ))}
            </tr>
            <!-- Book buttons row -->
            <tr class="bg-white">
              <td class="px-4 py-4"></td>
              {packages.map(pkg => (
                <td class="px-3 py-4 text-center">
                  <a href="tel:+17542152272" class={`inline-block px-4 py-2 rounded-lg text-sm font-semibold transition-colors ${pkg.promo ? 'bg-green-500 text-white hover:bg-green-600' : 'bg-[#0f2a4a] text-white hover:bg-[#1a3d6b]'}`}>
                    {pkg.comingSoon ? 'Contact Us' : 'Book Now'}
                  </a>
                </td>
              ))}
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Instagram Feed Section -->
  <InstagramFeed scriptSrc="https://cdn.trustindex.io/loader-feed.js?31d15e4644082675a636b64f954" />

  <!-- Custom Package CTA -->
  <section class="py-12 lg:py-16">
    <div class="max-w-4xl mx-auto px-4">
      <div class="bg-gray-50 rounded-xl p-8 text-center">
        <h2 class="text-2xl font-bold text-[#0f2a4a] mb-4">Need Something Custom?</h2>
        <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
          Every vehicle is different. Call us to discuss your specific needs and we'll put together a personalized quote.
          Add-ons can be combined with any package.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+17542152272" class="btn-accent inline-flex items-center justify-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call 754-215-2272
          </a>
          <a href={`${base}contact/`} class="bg-white border-2 border-[#0f2a4a] text-[#0f2a4a] px-6 py-3 rounded-md font-semibold hover:bg-gray-50 transition-colors">
            Request Quote Online
          </a>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>
