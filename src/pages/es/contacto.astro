---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { localizedUrl } from '../../i18n/utils';

const title = "Contacto | Route95 Mobile Car Detailing";
const description = "Contacta a Route95 Mobile Car Detailing para detallado profesional de autos a domicilio en Fort Lauderdale. Llama al 754-215-2272 o solicita una cotización gratis en línea. Servicio el mismo día disponible.";

const services = [
  "Lavado a Mano",
  "Detallado Completo",
  "Limpieza Interior",
  "Limpieza y Acondicionamiento de Cuero",
  "Eliminación de Olores",
  "Eliminación de Pelo de Mascota",
  "Restauración de Faros",
  "Protección de Pintura",
  "Otro"
];
---

<BaseLayout title={title} description={description} currentPage="/es/contacto/">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#0a1e38] to-[#0f2a4a] text-white py-16">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold mb-4">Contáctanos</h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        ¿Listo para detallar tu auto? Llámanos ahora o completa el formulario a continuación para una cotización gratis. Servicio el mismo día disponible en toda Fort Lauderdale.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold text-[#0f2a4a] mb-6">Solicita una Cotización Gratis</h2>
          <form action="https://formspree.io/f/xyzgkqpw" method="POST" class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nombre *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c0c7cf] focus:border-transparent outline-none transition-all"
                  placeholder="Tu nombre"
                >
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Teléfono *</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c0c7cf] focus:border-transparent outline-none transition-all"
                  placeholder="(754) 555-0123"
                >
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Correo Electrónico</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c0c7cf] focus:border-transparent outline-none transition-all"
                placeholder="tu@ejemplo.com"
              >
            </div>

            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-1">Servicio de Interés</label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c0c7cf] focus:border-transparent outline-none transition-all bg-white"
              >
                <option value="">Selecciona un servicio</option>
                {services.map(service => (
                  <option value={service}>{service}</option>
                ))}
              </select>
            </div>

            <div>
              <label for="vehicle" class="block text-sm font-medium text-gray-700 mb-1">Marca y Modelo del Vehículo</label>
              <input
                type="text"
                id="vehicle"
                name="vehicle"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c0c7cf] focus:border-transparent outline-none transition-all"
                placeholder="ej., Mercedes S-Class, BMW X5"
              >
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Mensaje</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#c0c7cf] focus:border-transparent outline-none transition-all resize-none"
                placeholder="Cuéntanos sobre tu vehículo y qué servicios te interesan..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full btn-accent text-lg py-4"
            >
              Solicitar Cotización Gratis
            </button>

            <p class="text-sm text-gray-500 text-center">
              Normalmente respondemos dentro de 1-2 horas durante horario laboral.
            </p>
          </form>
        </div>

        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold text-[#0f2a4a] mb-6">Ponte en Contacto</h2>

          <!-- Quick Contact -->
          <div class="bg-gradient-to-br from-[#0a1e38] to-[#0f2a4a] rounded-xl p-6 mb-8 text-white">
            <h3 class="text-xl font-bold mb-4">¿Necesitas Servicio Hoy?</h3>
            <p class="text-gray-300 mb-4">
              Llámanos directamente para citas el mismo día. Frecuentemente podemos estar en tu ubicación en pocas horas.
            </p>
            <a href="tel:+17542152272" class="btn-accent inline-flex items-center gap-2 text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              754-215-2272
            </a>
          </div>

          <!-- Contact Details -->
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#0f2a4a]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-[#0f2a4a]">Teléfono</h4>
                <a href="tel:+17542152272" class="text-gray-600 hover:text-[#c0c7cf]">754-215-2272</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#0f2a4a]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-[#0f2a4a]">Correo Electrónico</h4>
                <a href="mailto:contact@route95mobilecardetailing.com" class="text-gray-600 hover:text-[#c0c7cf] break-all">
                  contact@route95mobilecardetailing.com
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#0f2a4a]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-[#0f2a4a]">Horario</h4>
                <p class="text-gray-600">
                  Lunes - Sábado: 8AM - 8PM<br>
                  Domingo: Cerrado
                </p>
              </div>
            </div>

            <!-- Social Media -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#0f2a4a]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-[#0f2a4a]">Síguenos</h4>
                <div class="flex gap-3 mt-2">
                  <a href="https://facebook.com/route95mobilecardetailing" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-[#0f2a4a] rounded-lg flex items-center justify-center text-white hover:bg-[#c0c7cf] transition-colors" aria-label="Facebook">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                    </svg>
                  </a>
                  <a href="https://instagram.com/route95mobilecardetailing" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-[#0f2a4a] rounded-lg flex items-center justify-center text-white hover:bg-[#c0c7cf] transition-colors" aria-label="Instagram">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                  </a>
                  <a href="https://tiktok.com/@route95mobcardetailing" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-[#0f2a4a] rounded-lg flex items-center justify-center text-white hover:bg-[#c0c7cf] transition-colors" aria-label="TikTok">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Service Areas -->
          <div class="mt-8 p-6 bg-gray-50 rounded-xl">
            <h3 class="font-bold text-[#0f2a4a] mb-4">Áreas de Servicio</h3>
            <p class="text-gray-600 mb-4">
              Ofrecemos detallado de autos a domicilio en todo el Condado de Broward, incluyendo:
            </p>
            <ul class="grid grid-cols-2 gap-2 text-gray-600">
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c0c7cf]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Fort Lauderdale
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c0c7cf]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Las Olas
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c0c7cf]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Nurmi Isles
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c0c7cf]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Seven Isles
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c0c7cf]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Hollywood
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c0c7cf]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Dania Beach
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c0c7cf]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Pompano Beach
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c0c7cf]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Deerfield Beach
              </li>
              <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#c0c7cf]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Boca Raton
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-8 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="rounded-xl overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d114964.53925916665!2d-80.20352840258781!3d26.12230389580008!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d9010b2ba2cf47%3A0x71a6f5c2f8a77d5f!2sFort%20Lauderdale%2C%20FL!5e0!3m2!1sen!2sus!4v1706900000000!5m2!1sen!2sus"
