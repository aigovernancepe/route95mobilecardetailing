---
import { getCollection } from 'astro:content';
import BlogLayout from '../../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const esPosts = allPosts.filter(post => post.id.startsWith('es/'));

  return esPosts.map(post => ({
    params: { slug: post.id.replace('es/', '').replace(/\.md$/, '') },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

let faqSchema = undefined;
if (post.data.faqs && post.data.faqs.length > 0) {
  faqSchema = {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": post.data.faqs.map(faq => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer,
      }
    }))
  };
}
---

<BlogLayout
  title={post.data.title}
  description={post.data.description}
  date={post.data.date}
  author={post.data.author}
  schema={faqSchema}
>
  <Content />
</BlogLayout>
