---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { localizedUrl } from '../../i18n/utils';

const base = import.meta.env.BASE_URL;
const title = "Detallado de Autos a Domicilio Hollywood FL | Route95";
const description = "Detallado profesional de autos a domicilio en Hollywood, FL. ¡Vamos a ti! Lavado a mano, limpieza interior, paquetes completos. Servicio el mismo día. Llama al 754-215-2272";

const whatsappNumber = "17542152272";
const whatsappMessage = "¡Hola! Me gustaría obtener una cotización para detallado de autos en Hollywood, FL.";
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;

const siteUrl = "https://route95mobilecardetailing.com";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "@id": `${siteUrl}/es/detallado-movil-hollywood-fl/#service`,
  "name": "Detallado de Autos a Domicilio Hollywood FL",
  "description": description,
  "url": `${siteUrl}/es/detallado-movil-hollywood-fl/`,
  "serviceType": "Mobile Car Detailing",
  "provider": { "@id": `${siteUrl}/#business` },
  "areaServed": {
    "@type": "City",
    "name": "Hollywood",
    "sameAs": "https://en.wikipedia.org/wiki/Hollywood,_Florida",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 26.0112,
      "longitude": -80.1495
    }
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Servicios de Detallado de Autos en Hollywood FL",
    "itemListElement": [
      { "@type": "OfferCatalog", "name": "Servicios de Lavado", "url": `${siteUrl}/es/lavado-de-autos-fort-lauderdale/` },
      { "@type": "OfferCatalog", "name": "Limpieza de Tapicería", "url": `${siteUrl}/es/limpieza-de-tapiceria-fort-lauderdale/` },
      { "@type": "OfferCatalog", "name": "Paquetes de Detallado", "url": `${siteUrl}/es/servicios-de-detallado-fort-lauderdale/` }
    ]
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "¿Cuánto cuesta el detallado de autos a domicilio en Hollywood, FL?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "El detallado de autos a domicilio en Hollywood, FL comienza desde $50 por un Lavado Rápido y hasta $460 por una Renovación Premium, dependiendo del tamaño del vehículo y el paquete seleccionado. Llama al 754-215-2272 para una cotización exacta."
      }
    },
    {
      "@type": "Question",
      "name": "¿Sirven toda el área de Hollywood, Florida?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Sí, servimos todo Hollywood incluyendo Hollywood Beach, Downtown Hollywood, Emerald Hills, Hollywood Hills y vecindarios a lo largo de Hollywood Boulevard, US-1 y el Intracoastal. También servimos Fort Lauderdale, Dania Beach y Pompano Beach cercanos."
      }
    },
    {
      "@type": "Question",
      "name": "¿Puedo obtener detallado de auto el mismo día en Hollywood, FL?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "¡Sí! Citas el mismo día están frecuentemente disponibles en Hollywood. Llámanos en la mañana y frecuentemente podemos estar en tu ubicación esa misma tarde. Operamos de lunes a sábado, de 8 AM a 8 PM."
      }
    }
  ]
};

const schemas = [serviceSchema, faqSchema];

const services = [
  { title: "Servicios de Lavado", description: "Lavado a mano, encerado, barra de arcilla, limpieza de rines, eliminación de manchas de agua y más.", href: localizedUrl('es', 'car-wash-fort-lauderdale') },
  { title: "Limpieza de Tapicería", description: "Lavado de asientos, limpieza y acondicionamiento de cuero, lavado de alfombras, limpieza a vapor.", href: localizedUrl('es', 'upholstery-cleaning-fort-lauderdale') },
  { title: "Paquetes de Detallado", description: "Lavado Rápido, Nuevo Comienzo, Limpieza Completa y Renovación Premium desde $50.", href: localizedUrl('es', 'car-detailing-services-fort-lauderdale') }
];

const popularServices = [
  { title: "Lavado a Mano", href: localizedUrl('es', 'hand-wash-fort-lauderdale') },
  { title: "Limpieza Completa", href: localizedUrl('es', 'complete-clean-fort-lauderdale') },
  { title: "Limpieza de Cuero", href: localizedUrl('es', 'leather-cleaning-fort-lauderdale') },
  { title: "Lavado de Asientos", href: localizedUrl('es', 'seat-shampooing-fort-lauderdale') },
  { title: "Eliminación de Olores", href: localizedUrl('es', 'odor-removal-fort-lauderdale') },
  { title: "Renovación Premium", href: localizedUrl('es', 'premium-refresh-fort-lauderdale') }
];

const packages = [
  { name: "Lavado Rápido", price: "$50-$80", description: "Lavado a mano, limpieza de llantas y rines, limpieza de ventanas, limpieza interior, aspirado" },
  { name: "Nuevo Comienzo", price: "$80-$110", description: "Lavado Rápido más acondicionador de llantas, tablero, consola central" },
  { name: "Limpieza Completa", price: "$130-$160", description: "Nuevo Comienzo más guardabarros, alfombras, aspirado de cajuela" },
  { name: "Renovación Premium", price: "$400-$460", description: "Limpieza Completa más shampoo interior, marcos de puertas, limpieza a vapor" }
];
---

<BaseLayout title={title} description={description} currentPage="/es/detallado-movil-hollywood-fl/" schema={schemas}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#0c2448] to-[#1a5ca0] text-white py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4">
      <h1 class="text-4xl lg:text-5xl font-bold mb-6">Detallado de Autos a Domicilio Hollywood, FL</h1>
      <p class="text-xl text-gray-200 max-w-3xl mb-8">
        Detallado profesional de autos que llega a tu casa u oficina en Hollywood, Florida. Route95 lleva productos premium, equipo y cuidado experto directamente a tu ubicación — desde Hollywood Beach hasta Hollywood Hills.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="tel:+17542152272" class="btn-accent text-lg flex items-center justify-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
