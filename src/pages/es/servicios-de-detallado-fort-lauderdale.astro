---
import BaseLayout from '../../layouts/BaseLayout.astro';
import InstagramFeed from '../../components/InstagramFeed.astro';
import { localizedUrl } from '../../i18n/utils';

const base = import.meta.env.BASE_URL;
const title = "Servicios de Detallado Fort Lauderdale | Route95";
const description = "Paquetes de detallado de autos a domicilio en Fort Lauderdale. Lavado Rápido, Nuevo Comienzo, Limpieza Completa y Renovación Premium. Compara paquetes, extras y precios. Llama al 754-215-2272.";

const packages = [
  {
    name: "Lavado Rápido",
    slug: "quick-wash-fort-lauderdale",
    description: "Un refrescamiento rápido exterior e interior para mantener tu auto impecable. Lavado a mano, llantas y rines, limpieza de ventanas, limpieza interior y aspirado.",
    sedan: 50,
    suv: 65,
    truck: 80
  },
  {
    name: "Nuevo Comienzo",
    slug: "fresh-start-fort-lauderdale",
    description: "Un nivel más con acondicionador de llantas y limpieza interior completa. Incluye lavado a mano, llantas y rines, acondicionador de llantas, limpieza de ventanas, tablero, consola central y aspirado.",
    sedan: 80,
    suv: 95,
    truck: 110
  },
  {
    name: "Limpieza Completa",
    slug: "complete-clean-fort-lauderdale",
    description: "Nuestro paquete más completo — por dentro y por fuera, incluyendo cajuela. Lavado a mano, llantas y rines, acondicionador de llantas, guardabarros, ventanas, tablero, consola, tapetes y aspirado completo.",
    sedan: 130,
    suv: 145,
    truck: 160,
    popular: true,
    promo: true,
    promoLabel: "10% DE DESCUENTO — Feb y Marzo 2026",
    promoDiscount: 0.10
  },
  {
    name: "Renovación Premium",
    slug: "premium-refresh-fort-lauderdale",
    description: "Champú interior profundo con limpieza a vapor — el detallado definitivo. Incluye champú interior (asientos, alfombras, paneles de puertas, cinturones de seguridad), marcos de puertas, limpieza a vapor, más todo lo incluido en Limpieza Completa.",
    comingSoon: true
  }
];

// All services for comparison matrix
const allServices = [
  "Lavado a Mano",
  "Llantas y Rines",
  "Limpieza de Ventanas",
  "Limpieza Interior",
  "Aspirado",
  "Acondicionador de Llantas",
  "Tablero",
  "Consola Central",
  "Guardabarros",
  "Tapetes",
  "Aspirado (incl. Cajuela)",
  "Champú Interior",
  "Marcos de Puertas",
  "Limpieza a Vapor",
];

// Map which services are included in each package
const packageIncludes: Record<string, Set<string>> = {
  "Lavado Rápido": new Set(["Lavado a Mano", "Llantas y Rines", "Limpieza de Ventanas", "Limpieza Interior", "Aspirado"]),
  "Nuevo Comienzo": new Set(["Lavado a Mano", "Llantas y Rines", "Limpieza de Ventanas", "Limpieza Interior", "Aspirado", "Acondicionador de Llantas", "Tablero", "Consola Central"]),
  "Limpieza Completa": new Set(["Lavado a Mano", "Llantas y Rines", "Limpieza de Ventanas", "Limpieza Interior", "Aspirado", "Acondicionador de Llantas", "Tablero", "Consola Central", "Guardabarros", "Tapetes", "Aspirado (incl. Cajuela)"]),
  "Renovación Premium": new Set(["Lavado a Mano", "Llantas y Rines", "Limpieza de Ventanas", "Limpieza Interior", "Aspirado", "Acondicionador de Llantas", "Tablero", "Consola Central", "Guardabarros", "Tapetes", "Aspirado (incl. Cajuela)", "Champú Interior", "Marcos de Puertas", "Limpieza a Vapor"]),
};

const addOns = [
  { name: "Marcos de Puertas", price: 20 },
  { name: "Aspirado de Cajuela", price: 20 },
  { name: "Eliminación de Pelo de Mascota", price: 25 },
  { name: "Limpieza de Tapetes", price: 25 },
  { name: "Restauración de Molduras", price: 30 },
  { name: "Limpieza a Vapor", price: 50 },
  { name: "Eliminación de Olores", price: 40 },
  { name: "Acondicionamiento de Cuero", price: 40 },
  { name: "Eliminación de Insectos y Brea", price: 30 },
  { name: "Lavado de Asientos", price: 75, from: true },
  { name: "Lavado de Alfombras", price: 60, from: true },
  { name: "Encerado de Autos", price: 60, from: true }
];

const siteUrl = "https://route95mobilecardetailing.com";
const categorySchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "@id": `${siteUrl}/es/servicios-de-detallado-fort-lauderdale/#service`,
  "name": "Servicios de Detallado de Autos a Domicilio Fort Lauderdale",
  "description": description,
  "url": `${siteUrl}/es/servicios-de-detallado-fort-lauderdale/`,
  "serviceType": "Mobile Car Detailing",
  "provider": { "@id": `${siteUrl}/#business` },
  "areaServed": [
    { "@type": "City", "name": "Fort Lauderdale" },
    { "@type": "City", "name": "Dania Beach" },
    { "@type": "City", "name": "Hollywood" },
    { "@type": "City", "name": "Pompano Beach" }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Paquetes de Detallado de Autos",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Lavado Rápido", "url": `${siteUrl}/es/lavado-rapido-fort-lauderdale/` },
        "priceSpecification": { "@type": "PriceSpecification", "minPrice": 50, "maxPrice": 80, "priceCurrency": "USD" }
      },
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Nuevo Comienzo", "url": `${siteUrl}/es/nuevo-comienzo-fort-lauderdale/` },
        "priceSpecification": { "@type": "PriceSpecification", "minPrice": 80, "maxPrice": 110, "priceCurrency": "USD" }
      },
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Limpieza Completa", "url": `${siteUrl}/es/limpieza-completa-fort-lauderdale/` },
        "priceSpecification": { "@type": "PriceSpecification", "minPrice": 130, "maxPrice": 160, "priceCurrency": "USD" }
      },
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Renovación Premium", "url": `${siteUrl}/es/renovacion-premium-fort-lauderdale/` },
        "priceSpecification": { "@type": "PriceSpecification", "minPrice": 400, "maxPrice": 460, "priceCurrency": "USD" }
      }
    ]
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "¿Cuánto Cuesta el Detallado Móvil de Autos en Fort Lauderdale?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "El detallado móvil de autos en Fort Lauderdale cuesta entre $50 y $350+ dependiendo del paquete y el tamaño del vehículo. Un Lavado Rápido básico comienza en $50 para sedanes, mientras que nuestro paquete Limpieza Completa va de $117 a $144. Los paquetes premium con detallado completo interior y exterior cuestan $200-$350."
      }
    },
    {
      "@type": "Question",
      "name": "¿Qué Incluye Cada Paquete de Detallado?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Route95 ofrece cuatro niveles de detallado: Lavado Rápido (lavado y secado exterior), Nuevo Comienzo (exterior más interior básico), Limpieza Completa (detallado completo interior y exterior), y Renovación Premium (detallado integral con motor, acondicionamiento de cuero y protección de telas)."
      }
    },
    {
      "@type": "Question",
      "name": "¿Cómo Elegir el Paquete de Detallado Correcto?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Elige según la condición actual de tu vehículo y su historial de mantenimiento. El Lavado Rápido funciona para autos con mantenimiento regular. Nuevo Comienzo es ideal para mantenimiento mensual. Limpieza Completa es para vehículos que necesitan limpieza profunda cada 3-4 meses. Renovación Premium es mejor para vehículos descuidados o en preparación para venta."
      }
    }
  ]
};
---

<BaseLayout title={title} description={description} currentPage="/es/servicios-de-detallado-fort-lauderdale/" schema={[categorySchema, faqSchema]}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#0c2448] to-[#1a5ca0] text-white py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4">
      <h1 class="text-4xl lg:text-5xl font-bold mb-6">Servicios de Detallado Fort Lauderdale</h1>
      <p class="text-xl text-gray-200 max-w-3xl mb-6">
        <strong>Paquetes profesionales de detallado a domicilio que van a tu ubicación en Fort Lauderdale. Elige el nivel de cuidado que tu vehículo necesita — desde un refrescamiento rápido hasta una limpieza profunda completa.</strong>
      </p>
      <p class="text-lg text-gray-200 max-w-3xl mb-4">
        Cada paquete incluye servicio móvil en tu casa u oficina en Fort Lauderdale, Dania Beach, Hollywood y Pompano Beach. Usamos productos premium de Chemical Guys, Koch-Chemie y 3D, y nuestra garantía de satisfacción respalda cada detallado.
      </p>
      <p class="text-lg text-gray-200 max-w-3xl mb-8">
        Citas el mismo día frecuentemente disponibles. Llama al 754-215-2272.
      </p>
      <a href="tel:+17542152272" class="btn-accent inline-flex items-center justify-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Llama al 754-215-2272
      </a>
    </div>
  </section>

  <!-- FAQ Sections -->
  <section class="py-12 lg:py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <div class="mb-10">
        <h2 class="text-2xl font-bold text-[#0f2a4a] mb-4">¿Cuánto Cuesta el Detallado Móvil de Autos en Fort Lauderdale?</h2>
        <p class="text-gray-600 mb-4">
          <strong>El detallado móvil de autos en Fort Lauderdale cuesta entre $50 y $350+ dependiendo del paquete y el tamaño del vehículo. Un Lavado Rápido básico comienza en $50 para sedanes, mientras que nuestro paquete Limpieza Completa va de $117 a $144. Los paquetes premium con detallado completo interior y exterior cuestan $200-$350.</strong>
        </p>
        <p class="text-gray-600">
          Los precios varían según la clase de vehículo (sedán, SUV o camioneta) y el nivel de servicio que selecciones. Usamos productos de grado profesional de <a href="https://www.chemicalguys.com/" target="_blank" rel="noopener noreferrer" class="text-[#1a5ca0] underline hover:text-[#0f2a4a]">Chemical Guys</a> y <a href="https://www.koch-chemie.com/en" target="_blank" rel="noopener noreferrer" class="text-[#1a5ca0] underline hover:text-[#0f2a4a]">Koch-Chemie</a> en cada paquete, para que obtengas resultados premium en cada nivel de precio.
        </p>
      </div>

      <div class="mb-10">
        <h2 class="text-2xl font-bold text-[#0f2a4a] mb-4">¿Qué Incluye Cada Paquete de Detallado?</h2>
        <p class="text-gray-600 mb-4">
          <strong>Route95 ofrece cuatro niveles de detallado: Lavado Rápido (lavado y secado exterior), Nuevo Comienzo (exterior más interior básico), Limpieza Completa (detallado completo interior y exterior), y Renovación Premium (detallado integral con motor, acondicionamiento de cuero y protección de telas).</strong>
        </p>
        <p class="text-gray-600">
          Cada nivel se construye sobre el anterior. Nuestros técnicos siguen las mejores prácticas de la <a href="https://www.the-ida.com/" target="_blank" rel="noopener noreferrer" class="text-[#1a5ca0] underline hover:text-[#0f2a4a]">IDA (International Detailing Association)</a> y utilizan productos de <a href="https://www.chemicalguys.com/" target="_blank" rel="noopener noreferrer" class="text-[#1a5ca0] underline hover:text-[#0f2a4a]">Chemical Guys</a> y <a href="https://www.koch-chemie.com/en" target="_blank" rel="noopener noreferrer" class="text-[#1a5ca0] underline hover:text-[#0f2a4a]">Koch-Chemie</a> para entregar resultados consistentes y de alta calidad. Consulta la tabla comparativa abajo para un desglose completo servicio por servicio.
        </p>
      </div>

      <div>
        <h2 class="text-2xl font-bold text-[#0f2a4a] mb-4">¿Cómo Elegir el Paquete de Detallado Correcto?</h2>
        <p class="text-gray-600 mb-4">
          <strong>Elige según la condición actual de tu vehículo y su historial de mantenimiento. El Lavado Rápido funciona para autos con mantenimiento regular. Nuevo Comienzo es ideal para mantenimiento mensual. Limpieza Completa es para vehículos que necesitan limpieza profunda cada 3-4 meses. Renovación Premium es mejor para vehículos descuidados o en preparación para venta.</strong>
        </p>
        <p class="text-gray-600">
          ¿No estás seguro de qué paquete te conviene? Llámanos al <a href="tel:+17542152272" class="text-[#1a5ca0] underline hover:text-[#0f2a4a]">754-215-2272</a> y te ayudaremos a elegir según tu tipo de vehículo, condición y presupuesto.
        </p>
      </div>
    </div>
  </section>

  <!-- Package Cards -->
  <section class="py-12 lg:py-16">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {packages.map(pkg => (
          <div class={`bg-white rounded-xl shadow-lg overflow-hidden border-2 ${pkg.promo ? 'border-green-500 ring-2 ring-green-200' : pkg.popular ? 'border-[#0f2a4a]' : 'border-transparent'} hover:shadow-xl transition-shadow relative`}>
            {pkg.promo && (
              <div class="bg-green-500 text-white text-center py-2 text-sm font-bold tracking-wide">
                {pkg.promoLabel}
              </div>
            )}
            {pkg.popular && !pkg.promo && (
              <div class="absolute top-0 right-0 bg-[#0f2a4a] text-white px-4 py-1 text-sm font-bold rounded-bl-lg">
                Más Popular
              </div>
            )}
            {pkg.comingSoon && (
              <div class="absolute top-0 right-0 bg-[#c0c7cf] text-[#0f2a4a] px-4 py-1 text-sm font-bold rounded-bl-lg">
                Próximamente
              </div>
            )}

            <div class="p-6">
              <h2 class="text-2xl font-bold text-[#0f2a4a] mb-2">{pkg.name}</h2>
              <p class="text-gray-600 mb-4">{pkg.description}</p>

              {!pkg.comingSoon ? (
                <div class="border-t pt-4 mt-4">
                  <div class="grid grid-cols-3 gap-2 text-center mb-4">
                    <div>
                      <p class="text-xs text-gray-400">Sedán</p>
                      {pkg.promo ? (
                        <div>
                          <p class="text-sm text-gray-400 line-through">${pkg.sedan}</p>
                          <p class="text-xl font-bold text-green-600">${Math.round(pkg.sedan * (1 - pkg.promoDiscount))}</p>
                        </div>
                      ) : (
                        <p class="text-xl font-bold text-[#0f2a4a]">${pkg.sedan}</p>
                      )}
                    </div>
                    <div>
                      <p class="text-xs text-gray-400">SUV</p>
                      {pkg.promo ? (
                        <div>
                          <p class="text-sm text-gray-400 line-through">${pkg.suv}</p>
                          <p class="text-xl font-bold text-green-600">${Math.round(pkg.suv * (1 - pkg.promoDiscount))}</p>
                        </div>
                      ) : (
                        <p class="text-xl font-bold text-[#0f2a4a]">${pkg.suv}</p>
                      )}
                    </div>
                    <div>
                      <p class="text-xs text-gray-400">Camioneta</p>
                      {pkg.promo ? (
                        <div>
                          <p class="text-sm text-gray-400 line-through">${pkg.truck}</p>
                          <p class="text-xl font-bold text-green-600">${Math.round(pkg.truck * (1 - pkg.promoDiscount))}</p>
                        </div>
                      ) : (
                        <p class="text-xl font-bold text-[#0f2a4a]">${pkg.truck}</p>
                      )}
                    </div>
                  </div>
                </div>
              ) : (
                <div class="border-t pt-4 mt-4 text-center">
                  <p class="text-gray-500 italic mb-4">Precios próximamente — contáctanos para más detalles</p>
                </div>
              )}

              <a href={localizedUrl('es', pkg.slug)} class="block w-full text-center bg-[#0f2a4a] text-white py-3 rounded-lg font-semibold hover:bg-[#1a3d6b] transition-colors">
                {pkg.comingSoon ? 'Más Información' : 'Ver Detalles del Paquete'}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Add-Ons Section -->
  <section class="py-12 lg:py-16 bg-gray-50">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-[#0f2a4a] mb-2">Extras*</h2>
      <p class="text-gray-600 mb-6">Mejora cualquier paquete con estos servicios individuales:</p>
      <p class="text-sm text-gray-500 mb-6">*Los precios aplican solo en combinación con la reserva de un paquete.</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {addOns.map(addon => (
          <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 flex items-center justify-between hover:shadow-md transition-shadow">
            <span class="font-medium text-gray-700">{addon.name}</span>
            <span class="text-lg font-bold text-[#0f2a4a]">{addon.from ? `desde $${addon.price}` : `$${addon.price}`}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Package Comparison Matrix -->
  <section class="py-12 lg:py-16">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-[#0f2a4a] mb-6">Compara Paquetes</h2>
      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-xl shadow-lg overflow-hidden">
          <thead>
            <tr class="bg-[#0f2a4a] text-white">
              <th class="px-4 py-4 text-left font-semibold min-w-[180px]">Servicio</th>
              {packages.map(pkg => (
                <th class="px-3 py-4 text-center font-semibold min-w-[120px]">
                  <span>{pkg.name}</span>
                  {pkg.promo && <span class="block text-xs text-green-300 mt-1">10% DESC.</span>}
                  {pkg.comingSoon && <span class="block text-xs text-gray-200 mt-1">Próximamente</span>}
                </th>
              ))}
            </tr>
          </thead>
          <tbody>
            {allServices.map((service, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'} hover:bg-blue-50/50 transition-colors`}>
                <td class="px-4 py-3 text-sm font-medium text-gray-700">{service}</td>
                {packages.map(pkg => (
                  <td class="px-3 py-3 text-center">
                    {packageIncludes[pkg.name].has(service) ? (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mx-auto text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                      </svg>
                    ) : (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mx-auto text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" />
                      </svg>
                    )}
                  </td>
                ))}
              </tr>
            ))}
            <!-- Pricing rows -->
            <tr class="bg-[#0f2a4a]/5 border-t-2 border-[#0f2a4a]/20">
              <td class="px-4 py-3 text-sm font-bold text-[#0f2a4a]">Sedán / Hatchback</td>
              {packages.map(pkg => (
                <td class="px-3 py-3 text-center font-bold">
                  {pkg.sedan ? (
                    pkg.promo ? (
                      <span>
                        <span class="line-through text-gray-400 text-xs">${pkg.sedan}</span>
                        <span class="text-green-600 block text-lg">${Math.round(pkg.sedan * (1 - pkg.promoDiscount))}</span>
                      </span>
                    ) : (
                      <span class="text-[#0f2a4a] text-lg">${pkg.sedan}</span>
                    )
                  ) : (
                    <span class="text-gray-400">TBD</span>
                  )}
                </td>
              ))}
            </tr>
            <tr class="bg-[#0f2a4a]/5">
              <td class="px-4 py-3 text-sm font-bold text-[#0f2a4a]">Crossover / SUV</td>
              {packages.map(pkg => (
                <td class="px-3 py-3 text-center font-bold">
                  {pkg.suv ? (
                    pkg.promo ? (
                      <span>
                        <span class="line-through text-gray-400 text-xs">${pkg.suv}</span>
                        <span class="text-green-600 block text-lg">${Math.round(pkg.suv * (1 - pkg.promoDiscount))}</span>
                      </span>
                    ) : (
                      <span class="text-[#0f2a4a] text-lg">${pkg.suv}</span>
                    )
                  ) : (
                    <span class="text-gray-400">TBD</span>
                  )}
                </td>
              ))}
            </tr>
            <tr class="bg-[#0f2a4a]/5 border-b-0">
              <td class="px-4 py-3 text-sm font-bold text-[#0f2a4a]">Camioneta / Grande</td>
              {packages.map(pkg => (
                <td class="px-3 py-3 text-center font-bold">
                  {pkg.truck ? (
                    pkg.promo ? (
                      <span>
                        <span class="line-through text-gray-400 text-xs">${pkg.truck}</span>
                        <span class="text-green-600 block text-lg">${Math.round(pkg.truck * (1 - pkg.promoDiscount))}</span>
                      </span>
                    ) : (
                      <span class="text-[#0f2a4a] text-lg">${pkg.truck}</span>
                    )
                  ) : (
                    <span class="text-gray-400">TBD</span>
                  )}
                </td>
              ))}
            </tr>
            <!-- Book buttons row -->
            <tr class="bg-white">
              <td class="px-4 py-4"></td>
              {packages.map(pkg => (
                <td class="px-3 py-4 text-center">
                  <a href="tel:+17542152272" class={`inline-block px-4 py-2 rounded-lg text-sm font-semibold transition-colors ${pkg.promo ? 'bg-green-500 text-white hover:bg-green-600' : 'bg-[#0f2a4a] text-white hover:bg-[#1a3d6b]'}`}>
                    {pkg.comingSoon ? 'Contáctanos' : 'Reservar Ahora'}
                  </a>
                </td>
              ))}
            </tr>
          </tbody>
        </table>
