---
import { getTranslations, type Locale } from '../i18n/utils';

interface Props {
  scriptSrc: string;
  locale?: string;
}

const { scriptSrc, locale: localeProp } = Astro.props;
const locale = (localeProp ?? Astro.currentLocale ?? 'en') as Locale;
const t = getTranslations(locale);
---

<section class="py-16 lg:py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-[#0f2a4a] mb-4">
        {t.instagramFeed.heading}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {t.instagramFeed.description}
      </p>
    </div>
    <script defer async src={scriptSrc}></script>
  </div>
</section>
