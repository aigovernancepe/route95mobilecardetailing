---
interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;
const base = import.meta.env.BASE_URL;

const carWashServices = [
  { href: `${base}hand-wash-fort-lauderdale/`, label: 'Hand Wash' },
  { href: `${base}car-waxing-fort-lauderdale/`, label: 'Car Waxing' },
  { href: `${base}clay-bar-treatment-fort-lauderdale/`, label: 'Clay Bar Treatment' },
  { href: `${base}wheel-cleaning-fort-lauderdale/`, label: 'Wheel Cleaning' },
  { href: `${base}chrome-polishing-fort-lauderdale/`, label: 'Chrome Polishing' },
  { href: `${base}water-spot-removal-fort-lauderdale/`, label: 'Water Spot Removal' },
];

const upholsteryServices = [
  { href: `${base}seat-shampooing-fort-lauderdale/`, label: 'Seat Shampooing' },
  { href: `${base}carpet-shampooing-fort-lauderdale/`, label: 'Carpet Shampooing' },
  { href: `${base}leather-cleaning-fort-lauderdale/`, label: 'Leather Cleaning' },
  { href: `${base}leather-conditioning-fort-lauderdale/`, label: 'Leather Conditioning' },
  { href: `${base}steam-cleaning-fort-lauderdale/`, label: 'Steam Cleaning' },
  { href: `${base}odor-removal-fort-lauderdale/`, label: 'Odor Removal' },
];

const detailingServices = [
  { href: `${base}packages-fort-lauderdale/`, label: 'ðŸ“¦ View All Packages', highlight: true },
  { href: `${base}full-detail-fort-lauderdale/`, label: 'Full Detail' },
  { href: `${base}express-detail-fort-lauderdale/`, label: 'Express Detail' },
  { href: `${base}luxury-car-detailing-fort-lauderdale/`, label: 'Luxury Car Detailing' },
  { href: `${base}headlight-restoration-fort-lauderdale/`, label: 'Headlight Restoration' },
  { href: `${base}trim-restoration-fort-lauderdale/`, label: 'Trim Restoration' },
];

const mobileNavLinks = [
  { href: `${base}`, label: 'Home' },
  { href: `${base}car-wash-fort-lauderdale/`, label: 'Car Wash' },
  { href: `${base}upholstery-cleaning-fort-lauderdale/`, label: 'Upholstery Cleaning' },
  { href: `${base}car-detailing-services-fort-lauderdale/`, label: 'Detailing Services' },
  { href: `${base}about/`, label: 'About' },
  { href: `${base}contact/`, label: 'Contact' },
];
---

<header class="sticky top-0 z-50 bg-white shadow-md">
  <!-- Top bar with phone -->
  <div class="bg-[#1e3a5f] text-white py-2">
    <div class="max-w-7xl mx-auto px-4 flex justify-between items-center text-sm">
      <div class="flex items-center gap-4">
        <span class="hidden sm:inline">Fort Lauderdale, Hollywood, Pompano Beach</span>
      </div>
      <div class="flex items-center gap-4">
        <a href="tel:+17542152272" class="flex items-center gap-2 hover:text-[#c9a227] transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="font-semibold">754-215-2272</span>
        </a>
        <span class="hidden md:inline">Mon-Sat: 8AM-8PM</span>
      </div>
    </div>
  </div>

  <!-- Main navigation -->
  <nav class="max-w-7xl mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a href={base} class="flex items-center gap-2">
        <span class="text-2xl font-bold text-[#1e3a5f]">Route95</span>
        <span class="hidden sm:inline text-sm text-gray-600">Mobile Car Detailing</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-6">
        <a
          href={base}
          class={`text-gray-700 hover:text-[#1e3a5f] transition-colors font-medium ${currentPage === '/' ? 'text-[#1e3a5f] border-b-2 border-[#c9a227]' : ''}`}
        >
          Home
        </a>

        <!-- Car Wash Dropdown -->
        <div class="relative group">
          <a
            href={`${base}car-wash-fort-lauderdale/`}
            class={`text-gray-700 hover:text-[#1e3a5f] transition-colors font-medium inline-flex items-center gap-1 ${currentPage.includes('car-wash') ? 'text-[#1e3a5f] border-b-2 border-[#c9a227]' : ''}`}
          >
            Car Wash
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-2">
              <a href={`${base}car-wash-fort-lauderdale/`} class="block px-4 py-2 text-sm font-semibold text-[#1e3a5f] hover:bg-gray-50 border-b border-gray-100">
                All Car Wash Services
              </a>
              {carWashServices.map(service => (
                <a href={service.href} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-[#1e3a5f]">
                  {service.label}
                </a>
              ))}
            </div>
          </div>
        </div>

        <!-- Upholstery Cleaning Dropdown -->
        <div class="relative group">
          <a
            href={`${base}upholstery-cleaning-fort-lauderdale/`}
            class={`text-gray-700 hover:text-[#1e3a5f] transition-colors font-medium inline-flex items-center gap-1 ${currentPage.includes('upholstery') ? 'text-[#1e3a5f] border-b-2 border-[#c9a227]' : ''}`}
          >
            Upholstery Cleaning
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-2">
              <a href={`${base}upholstery-cleaning-fort-lauderdale/`} class="block px-4 py-2 text-sm font-semibold text-[#1e3a5f] hover:bg-gray-50 border-b border-gray-100">
                All Upholstery Services
              </a>
              {upholsteryServices.map(service => (
                <a href={service.href} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-[#1e3a5f]">
                  {service.label}
                </a>
              ))}
            </div>
          </div>
        </div>

        <!-- Detailing Services Dropdown -->
        <div class="relative group">
          <a
            href={`${base}car-detailing-services-fort-lauderdale/`}
            class={`text-gray-700 hover:text-[#1e3a5f] transition-colors font-medium inline-flex items-center gap-1 ${currentPage.includes('detailing-services') ? 'text-[#1e3a5f] border-b-2 border-[#c9a227]' : ''}`}
          >
            Detailing Services
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-2">
              <a href={`${base}car-detailing-services-fort-lauderdale/`} class="block px-4 py-2 text-sm font-semibold text-[#1e3a5f] hover:bg-gray-50 border-b border-gray-100">
                All Detailing Services
              </a>
              {detailingServices.map(service => (
                <a href={service.href} class={`block px-4 py-2 text-sm hover:bg-gray-50 hover:text-[#1e3a5f] ${service.highlight ? 'text-[#c9a227] font-semibold bg-amber-50' : 'text-gray-700'}`}>
                  {service.label}
                </a>
              ))}
            </div>
          </div>
        </div>

        <a
          href={`${base}about/`}
          class={`text-gray-700 hover:text-[#1e3a5f] transition-colors font-medium ${currentPage === '/about/' ? 'text-[#1e3a5f] border-b-2 border-[#c9a227]' : ''}`}
        >
          About
        </a>
        <a
          href={`${base}contact/`}
          class={`text-gray-700 hover:text-[#1e3a5f] transition-colors font-medium ${currentPage === '/contact/' ? 'text-[#1e3a5f] border-b-2 border-[#c9a227]' : ''}`}
        >
          Contact
        </a>
        <a href="tel:+17542152272" class="btn-accent inline-flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Now
        </a>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-btn" class="lg:hidden p-2 text-gray-700" aria-label="Open menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden lg:hidden mt-4 pb-4 border-t pt-4">
      <div class="flex flex-col gap-2">
        {mobileNavLinks.map(link => (
          <a
            href={link.href}
            class={`text-gray-700 hover:text-[#1e3a5f] transition-colors font-medium py-2 ${currentPage === link.href ? 'text-[#1e3a5f] border-l-4 border-[#c9a227] pl-4' : ''}`}
          >
            {link.label}
          </a>
        ))}
        <a href="tel:+17542152272" class="btn-accent text-center mt-2">
          Call 754-215-2272
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
