---
const currentYear = new Date().getFullYear();

const serviceLinks = [
  { href: '/hand-wash-fort-lauderdale/', label: 'Hand Wash' },
  { href: '/leather-cleaning-fort-lauderdale/', label: 'Leather Cleaning' },
  { href: '/full-detail-fort-lauderdale/', label: 'Full Detail' },
  { href: '/interior-vacuuming-fort-lauderdale/', label: 'Interior Vacuuming' },
  { href: '/odor-removal-fort-lauderdale/', label: 'Odor Removal' },
  { href: '/headlight-restoration-fort-lauderdale/', label: 'Headlight Restoration' },
];

const categoryLinks = [
  { href: '/car-wash-fort-lauderdale/', label: 'Car Wash Services' },
  { href: '/upholstery-cleaning-fort-lauderdale/', label: 'Upholstery Cleaning' },
  { href: '/car-detailing-services-fort-lauderdale/', label: 'Detailing Services' },
];
---

<footer class="bg-[#1e3a5f] text-white">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div>
        <h3 class="text-xl font-bold mb-4">Route95 Mobile Car Detailing</h3>
        <p class="text-gray-300 mb-4">
          Professional mobile car detailing in Fort Lauderdale. We come to you with premium Chemical Guys products for luxury results.
        </p>
        <div class="flex items-center gap-2 text-[#c9a227]">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="font-semibold">Satisfaction Guaranteed</span>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-xl font-bold mb-4">Popular Services</h3>
        <ul class="space-y-2">
          {serviceLinks.map(link => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-[#c9a227] transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Service Areas -->
      <div>
        <h3 class="text-xl font-bold mb-4">Service Areas</h3>
        <ul class="space-y-2 text-gray-300">
          <li>Fort Lauderdale, FL</li>
          <li>Hollywood, FL</li>
          <li>Pompano Beach, FL</li>
          <li>Broward County</li>
          <li class="text-sm text-gray-400 mt-2">Including Las Olas, Nurmi Isles, Seven Isles</li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-xl font-bold mb-4">Contact Us</h3>
        <ul class="space-y-3">
          <li>
            <a href="tel:+17542152272" class="flex items-center gap-2 text-[#c9a227] hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="font-semibold">754-215-2272</span>
            </a>
          </li>
          <li>
            <a href="mailto:contact@route95mobilecardetailing.com" class="flex items-center gap-2 text-gray-300 hover:text-[#c9a227] transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="text-sm">contact@route95mobilecardetailing.com</span>
            </a>
          </li>
          <li class="flex items-start gap-2 text-gray-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>540 NW 4th Ave, Apt 412<br>Fort Lauderdale, FL 33311</span>
          </li>
          <li class="flex items-center gap-2 text-gray-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Mon - Sat: 8AM - 8PM</span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-700">
    <div class="max-w-7xl mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-400 text-sm">
          &copy; {currentYear} Route95 Mobile Car Detailing LLC. All rights reserved.
        </p>
        <div class="flex gap-6 text-sm">
          <a href="/about/" class="text-gray-400 hover:text-[#c9a227] transition-colors">About</a>
          <a href="/contact/" class="text-gray-400 hover:text-[#c9a227] transition-colors">Contact</a>
        </div>
      </div>
    </div>
  </div>
</footer>
