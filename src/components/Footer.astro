---
const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL;

const serviceLinks = [
  { href: `${base}hand-wash-fort-lauderdale/`, label: 'Hand Wash' },
  { href: `${base}car-waxing-fort-lauderdale/`, label: 'Car Waxing' },
  { href: `${base}leather-cleaning-fort-lauderdale/`, label: 'Leather Cleaning' },
  { href: `${base}seat-shampooing-fort-lauderdale/`, label: 'Seat Shampooing' },
  { href: `${base}complete-clean-fort-lauderdale/`, label: 'Complete Clean' },
  { href: `${base}odor-removal-fort-lauderdale/`, label: 'Odor Removal' },
];

const categoryLinks = [
  { href: `${base}car-wash-fort-lauderdale/`, label: 'Car Wash Services' },
  { href: `${base}upholstery-cleaning-fort-lauderdale/`, label: 'Upholstery Cleaning' },
  { href: `${base}car-detailing-services-fort-lauderdale/`, label: 'Detailing Services' },
];
---

<footer class="bg-[#0f2a4a] text-white">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div>
        <h3 class="text-xl font-bold mb-4">Route95 Mobile Car Detailing</h3>
        <p class="text-gray-300 mb-4">
          Professional mobile car detailing in Fort Lauderdale. We come to you with premium Chemical Guys products for luxury results.
        </p>
        <div class="flex items-center gap-2 text-[#c0c7cf]">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="font-semibold">Satisfaction Guaranteed</span>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-xl font-bold mb-4">Popular Services</h3>
        <ul class="space-y-2">
          {serviceLinks.map(link => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-[#c0c7cf] transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Service Areas -->
      <div>
        <h3 class="text-xl font-bold mb-4">Service Areas</h3>
        <ul class="space-y-2 text-gray-300">
          <li>Fort Lauderdale, FL</li>
          <li>Hollywood, FL</li>
          <li>Dania Beach, FL</li>
          <li>Pompano Beach, FL</li>
          <li>Deerfield Beach, FL</li>
          <li>Boca Raton, FL</li>
          <li class="text-sm text-gray-400 mt-2">Including Las Olas, Nurmi Isles, Seven Isles & all of Broward County</li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-xl font-bold mb-4">Contact Us</h3>
        <ul class="space-y-3">
          <li>
            <a href="tel:+17542152272" class="flex items-center gap-2 text-[#c0c7cf] hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
